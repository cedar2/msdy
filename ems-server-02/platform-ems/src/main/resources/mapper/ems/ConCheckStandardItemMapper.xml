                                                                check_standard_code,
                                                                check_standard_sid,
                                                                check_item_code,
                                                                check_item_sid,
                                                                check_cost,
                                                                currency,
                                                                currency_unit,
                                                                standard_value,
                                                                standard_value_type,
                                                                symbol_start,
                                                                value_start,
                                                                symbol_end,
                                                                value_end,
                                                                sort,
                                                                remark,
                                                                creator_account,
                                                                create_date,
