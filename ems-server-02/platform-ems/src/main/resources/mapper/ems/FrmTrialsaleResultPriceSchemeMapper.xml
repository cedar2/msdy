                advertise_cost = #{advertiseCost},
                other_comment = #{otherComment},
                profit = #{profit},
                profit_rate = #{profitRate},
                currency = #{currency},
                currency_unit = #{currencyUnit},
                remark = #{remark},
                updater_account = #{updaterAccount},
                update_date = #{updateDate},
            </trim>
            where trialsale_result_price_scheme_sid = #{trialsaleResultPriceSchemeSid}
        </foreach>
    </update>

</mapper>
