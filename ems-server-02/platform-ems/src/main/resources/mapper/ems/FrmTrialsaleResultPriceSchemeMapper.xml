            product_cost = #{productCost},
            logistics_cost = #{logisticsCost},
            sale_cost = #{saleCost},
            rakeoff = #{rakeoff},
            operate_cost = #{operateCost},
            advertise_cost_rate = #{advertiseCostRate},
            advertise_cost = #{advertiseCost},
            other_comment = #{otherComment},
            profit = #{profit},
            profit_rate = #{profitRate},
            currency = #{currency},
            currency_unit = #{currencyUnit},
            remark = #{remark},
            updater_account = #{updaterAccount},
            update_date = #{updateDate},
        </trim>
        where trialsale_result_price_scheme_sid = #{trialsaleResultPriceSchemeSid}
    </update>

    <!--更新多个-->
    <update id="updatesAllById">
        <foreach collection="list" item="o" separator=";">
            update s_frm_trialsale_result_price_scheme
            <trim prefix="SET" suffixOverrides=",">
                client_id = #{clientId},
                trialsale_result_sid = #{trialsaleResultSid},
                scheme = #{scheme},
                fixed_price = #{fixedPrice},
