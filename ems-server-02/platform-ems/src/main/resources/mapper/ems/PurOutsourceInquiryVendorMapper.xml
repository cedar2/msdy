<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.ems.mapper.PurOutsourceInquiryVendorMapper">

    <resultMap type="com.platform.ems.domain.PurOutsourceInquiryVendor" id="PurOutsourceInquiryVendorResult">
        <result property="clientId" column="client_id"/>
        <result property="outsourceInquiryVendorSid" column="outsource_inquiry_vendor_sid"/>
        <result property="outsourceInquirySid" column="outsource_inquiry_sid"/>
        <result property="vendorSid" column="vendor_sid"/>
        <result property="remark" column="remark"/>
        <result property="creatorAccount" column="creator_account"/>
        <result property="createDate" column="create_date"/>
        <result property="dataSourceSys" column="data_source_sys"/>
        <result property="vendorCode" column="vendor_code"/>
        <result property="vendorName" column="vendor_name"/>
        <result property="shortName" column="short_name"/>
        <result property="creatorAccountName" column="creator_account_name"/>
        <result property="outsourceInquiryCode" column="outsource_inquiry_code"/>
    </resultMap>

    <sql id="selectPurOutsourceInquiryVendorVo">
        select t.client_id,
               t.outsource_inquiry_vendor_sid,
               t.outsource_inquiry_sid,
               t.vendor_sid,
               t.remark,
               t.creator_account,
               t.create_date,
               t.data_source_sys,
               t1.vendor_code,
               t1.vendor_name,
               t1.short_name AS short_name,
               t2.nick_name AS creator_account_name,
               t3.outsource_inquiry_code
        from s_pur_outsource_inquiry_vendor t
         left join s_bas_vendor t1 on t.vendor_sid = t1.vendor_sid
         left join sys_user t2 on t.creator_account = t2.user_name
         left join s_pur_outsource_inquiry t3 on t.outsource_inquiry_sid = t3.outsource_inquiry_sid
    </sql>

    <select id="selectPurOutsourceInquiryVendorById" parameterType="Long" resultMap="PurOutsourceInquiryVendorResult">
        <include refid="selectPurOutsourceInquiryVendorVo"/>
        where t.outsource_inquiry_vendor_sid = #{outsourceInquiryVendorSid}
    </select>


    <select id="selectPurOutsourceInquiryVendorList" parameterType="com.platform.ems.domain.PurOutsourceInquiryVendor"
            resultMap="PurOutsourceInquiryVendorResult">
        <include refid="selectPurOutsourceInquiryVendorVo"/>
        <where>
            <if test="outsourceInquiryVendorSidList != null and outsourceInquiryVendorSidList.length >0">and t.outsource_inquiry_vendor_sid in
                (<foreach collection="outsourceInquiryVendorSidList" item="outsourceInquiryVendorSid" separator=",">#{outsourceInquiryVendorSid}</foreach>)
            </if>
            <if test="outsourceInquirySidList != null and outsourceInquirySidList.length >0">and t.outsource_inquiry_sid in
                (<foreach collection="outsourceInquirySidList" item="outsourceInquirySid" separator=",">#{outsourceInquirySid}</foreach>)
            </if>
            <if test="vendorSidList != null and vendorSidList.length >0">and t.vendor_sid in
                (<foreach collection="vendorSidList" item="vendorSid" separator=",">#{vendorSid}</foreach>)
            </if>
            <if test="clientId != null  and clientId != ''">
                and (<foreach collection="clientId.split(';')" item="item" separator="or">t.client_id
                like concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="outsourceInquirySid != null ">
                and t.outsource_inquiry_sid =#{outsourceInquirySid}
            </if>
            <if test="vendorSid != null ">
                and t.vendor_sid =#{vendorSid}
            </if>
            <if test="creatorAccount != null  and creatorAccount != ''">
                and (<foreach collection="creatorAccount.split(';')" item="item" separator="or">t.creator_account
                like concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="beginTime != null and beginTime!=''">
                and date_format(t.create_date,'%y%m%d') &gt;= date_format(#{beginTime},'%y%m%d')
            </if>
            <if test="endTime != null and endTime!=''">
                and date_format(t.create_date,'%y%m%d') &lt;= date_format(#{endTime},'%y%m%d')
            </if>
            <if test="dataSourceSys != null  and dataSourceSys != ''">
                and (<foreach collection="dataSourceSys.split(';')" item="item" separator="or">t.data_source_sys
                like concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="params.dataScope != null and params.dataScope!=''">
                ${params.dataScope}
            </if>
        </where>
    </select>


    <!--添加多个-->
    <insert id="inserts">
        insert into s_pur_outsource_inquiry_vendor
        <trim prefix="(" suffix=")" suffixOverrides=",">
            client_id,
            outsource_inquiry_vendor_sid,
            outsource_inquiry_sid,
            vendor_sid,
            remark,
            creator_account,
            create_date,
            data_source_sys,
        </trim>
        values
        <foreach collection="list" item="item" separator=",">
            <trim prefix=" (" suffix=")" suffixOverrides=",">
                #{item.clientId},
                #{item.outsourceInquiryVendorSid},
                #{item.outsourceInquirySid},
                #{item.vendorSid},
                #{item.remark},
                #{item.creatorAccount},
                #{item.createDate},
                #{item.dataSourceSys},
            </trim>
        </foreach>
    </insert>

    <!--更新-->
    <update id="updateAllById">
        update s_pur_outsource_inquiry_vendor
        <trim prefix="SET" suffixOverrides=",">
            outsource_inquiry_sid = #{outsourceInquirySid},
            vendor_sid = #{vendorSid},
            remark = #{remark},
            data_source_sys = #{dataSourceSys},
        </trim>
        where outsource_inquiry_vendor_sid = #{outsourceInquiryVendorSid}
    </update>

    <!--更新多个-->
    <update id="updatesAllById">
        <foreach collection="list" item="o" separator=";">
            update s_pur_outsource_inquiry_vendor
            <trim prefix="SET" suffixOverrides=",">
                outsource_inquiry_sid = #{outsourceInquirySid},
                vendor_sid = #{vendorSid},
                remark = #{remark},
                data_source_sys = #{dataSourceSys},
            </trim>
            where outsource_inquiry_vendor_sid = #{outsourceInquiryVendorSid}
        </foreach>
    </update>

    <select id="selectPurOutsourceInquiryVendorListById" parameterType="Long" resultMap="PurOutsourceInquiryVendorResult">
        <include refid="selectPurOutsourceInquiryVendorVo"/>
        where t.outsource_inquiry_sid = #{outsourceInquirySid}
    </select>

    <delete id="deletePurOutsourceInquiryVendorByInquirySids" parameterType="Long">
        delete
        from s_pur_outsource_inquiry_vendor t
        where t.outsource_inquiry_sid in (<foreach collection="outsourceInquirySid" item="sid" separator=",">#{sid}</foreach>)
    </delete>

    <select id="selectPurOutsourceInquiryVendorSidListById" parameterType="Long" resultType="Long">
        select t.outsource_inquiry_vendor_sid
        from s_pur_outsource_inquiry_vendor t
        where t.outsource_inquiry_sid in (<foreach collection="outsourceInquirySid" item="sid" separator=",">#{sid}</foreach>)
    </select>


</mapper>
