<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.ems.mapper.BasVendorBankAccountMapper">

    <resultMap type="com.platform.ems.domain.BasVendorBankAccount" id="BasVendorBankAccountResult">
        <result property="clientId" column="client_id"/>
        <result property="vendorBankAccountSid" column="vendor_bank_account_sid"/>
        <result property="vendorSid" column="vendor_sid"/>
        <result property="accountType" column="account_type"/>
        <result property="bankName" column="bank_name"/>
        <result property="bankBranchName" column="bank_branch_name"/>
        <result property="bankBranchCode" column="bank_branch_code"/>
        <result property="country" column="country"/>
        <result property="province" column="province"/>
        <result property="city" column="city"/>
        <result property="bankAccount" column="bank_account"/>
        <result property="bankAccountName" column="bank_account_name"/>
        <result property="picturePath" column="picture_path"/>
        <result property="remark" column="remark"/>
        <result property="status" column="status"/>
        <result property="creatorAccount" column="creator_account"/>
        <result property="createDate" column="create_date"/>
        <result property="updaterAccount" column="updater_account"/>
        <result property="updateDate" column="update_date"/>
        <result property="dataSourceSys" column="data_source_sys"/>
        <result property="creatorAccountName" column="creator_account_name"/>
    </resultMap>

    <select id="selectBasVendorBankAccountById" parameterType="Long" resultMap="BasVendorBankAccountResult">
        <include refid="selectBasVendorBankAccountVo"/>
        where t.client_id = #{clientId}
    </select>


    <select id="selectBasVendorBankAccountList" parameterType="com.platform.ems.domain.BasVendorBankAccount"
            resultMap="BasVendorBankAccountResult">
        <include refid="selectBasVendorBankAccountVo"/>
        <where>
            <if test="vendorBankAccountSid != null  and vendorBankAccountSid != ''">
                and t.vendor_bank_account_sid  = #{vendorBankAccountSid}
            </if>
            <if test="vendorSid != null  and vendorSid != ''">
                and t.vendor_sid = #{vendorSid}
            </if>
            <if test="accountType != null  and accountType != ''">
                and t.account_type in (
                <foreach collection="accountType.split(';')" item="item" separator=",">
                    #{item}
                </foreach>
                )
            </if>
            <if test="bankName != null  and bankName != ''">and t.bank_name like concat('%', #{bankName}, '%')</if>
            <if test="bankBranchName != null  and bankBranchName != ''">and t.bank_branch_name like concat('%',
                #{bankBranchName}, '%')
            </if>
            <if test="bankBranchCode != null  and bankBranchCode != ''">
                and t.bank_branch_code in (
                <foreach collection="bankBranchCode.split(';')" item="item" separator=",">
                    #{item}
                </foreach>
                )
            </if>
            <if test="country != null  and country != ''">
                and t.country in (
                <foreach collection="country.split(';')" item="item" separator=",">
                    #{item}
                </foreach>
                )
            </if>
            <if test="province != null  and province != ''">
                and t.province in (
                <foreach collection="province.split(';')" item="item" separator=",">
                    #{item}
                </foreach>
                )
            </if>
            <if test="city != null  and city != ''">
                and t.city in (
                <foreach collection="city.split(';')" item="item" separator=",">
                    #{item}
                </foreach>
                )
            </if>
            <if test="bankAccount != null  and bankAccount != ''">
                and t.bank_account in (
                <foreach collection="bankAccount.split(';')" item="item" separator=",">
                    #{item}
                </foreach>
                )
            </if>
            <if test="bankAccountName != null  and bankAccountName != ''">and t.bank_account_name like concat('%',
                #{bankAccountName}, '%')
            </if>
            <if test="picturePath != null  and picturePath != ''">
                and t.picture_path in (
                <foreach collection="picturePath.split(';')" item="item" separator=",">
                    #{item}
                </foreach>
                )
            </if>
            <if test="status != null  and status != ''">
                and t.status in (
                <foreach collection="status.split(';')" item="item" separator=",">
                    #{item}
                </foreach>
                )
            </if>
            <if test="creatorAccount != null  and creatorAccount != ''">
                and t.creator_account in (
                <foreach collection="creatorAccount.split(';')" item="item" separator=",">
                    #{item}
                </foreach>
                )
            </if>
            <if test="createDate != null ">and t.create_date = #{createDate}</if>
            <if test="updaterAccount != null  and updaterAccount != ''">
                and t.updater_account in (
                <foreach collection="updaterAccount.split(';')" item="item" separator=",">
                    #{item}
                </foreach>
                )
            </if>
            <if test="updateDate != null ">and t.update_date = #{updateDate}</if>
            <if test="dataSourceSys != null  and dataSourceSys != ''">
                and t.data_source_sys in (
                <foreach collection="dataSourceSys.split(';')" item="item" separator=",">
                    #{item}
                </foreach>
                )
            </if>
        </where>
    </select>


    <!--添加多个-->
    <insert id="inserts">
        insert into s_bas_vendor_bank_account
        <trim prefix="(" suffix=")" suffixOverrides=",">
            client_id,
            vendor_bank_account_sid,
            vendor_sid,
            account_type,
            bank_name,
            bank_branch_name,
            bank_branch_code,
            country,
            province,
            city,
            country_region,
            bank_account,
            bank_account_name,
            picture_path,
            remark,
            status,
            creator_account,
            create_date,
            updater_account,
            update_date,
            data_source_sys,
        </trim>
        values

        <foreach collection="list" item="o" separator=",">
            <trim prefix=" (" suffix=")" suffixOverrides=",">
                #{o.clientId},
                #{o.vendorBankAccountSid},
                #{o.vendorSid},
                #{o.accountType},
                #{o.bankName},
                #{o.bankBranchName},
                #{o.bankBranchCode},
                #{o.country},
                #{o.province},
                #{o.city},
                #{o.countryRegion},
                #{o.bankAccount},
                #{o.bankAccountName},
                #{o.picturePath},
                #{o.remark},
                #{o.status},
                #{o.creatorAccount},
                #{o.createDate},
                #{o.updaterAccount},
                #{o.updateDate},
                #{o.dataSourceSys},
            </trim>
        </foreach>

    </insert>

    <!--更新-->
    <update id="updateAllById">
        update s_bas_vendor_bank_account
        <trim prefix="SET" suffixOverrides=",">
            vendor_bank_account_sid = #{vendorBankAccountSid},
            vendor_sid = #{vendorSid},
            account_type = #{accountType},
            bank_name = #{bankName},
            bank_branch_name = #{bankBranchName},
            bank_branch_code = #{bankBranchCode},
            country = #{country},
            province = #{province},
            city = #{city},
            bank_account = #{bankAccount},
            bank_account_name = #{bankAccountName},
            picture_path = #{picturePath},
            remark = #{remark},
            status = #{status},
            creator_account = #{creatorAccount},
            create_date = #{createDate},
            updater_account = #{updaterAccount},
            update_date = #{updateDate},
            data_source_sys = #{dataSourceSys},
        </trim>
        where client_id = #{clientId}
    </update>

    <!--更新多个-->
    <update id="updatesAllById">
        <foreach collection="list" item="o" separator=";">
            update s_bas_vendor_bank_account
            <trim prefix="SET" suffixOverrides=",">
                vendor_bank_account_sid = #{vendorBankAccountSid},
                vendor_sid = #{vendorSid},
                account_type = #{accountType},
                bank_name = #{bankName},
                bank_branch_name = #{bankBranchName},
                bank_branch_code = #{bankBranchCode},
                country = #{country},
                province = #{province},
                city = #{city},
                bank_account = #{bankAccount},
                bank_account_name = #{bankAccountName},
                picture_path = #{picturePath},
                remark = #{remark},
                status = #{status},
                creator_account = #{creatorAccount},
                create_date = #{createDate},
                updater_account = #{updaterAccount},
                update_date = #{updateDate},
                data_source_sys = #{dataSourceSys},
            </trim>
            where client_id = #{clientId}
        </foreach>
    </update>

    <delete id="deleteBankAccountByVendorSid">
        delete
        from s_bas_vendor_bank_account
        where vendor_sid = #{vendorSid}
    </delete>

    <sql id="selectBasVendorBankAccountVo">
        select t.client_id,
               t.vendor_bank_account_sid,
               t.vendor_sid,
               t.account_type,
               t.bank_name,
               t.bank_branch_name,
               t.bank_branch_code,
               t.country,
               t.province,
               t.city,
               t.bank_account,
               t.bank_account_name,
               t.picture_path,
               t.remark,
               t.status,
               t.creator_account,
               t.create_date,
               t.updater_account,
               t.update_date,
               t.data_source_sys,
               t2.nick_name AS creator_account_name
        from s_bas_vendor_bank_account t
            left join sys_user t2 on t.creator_account = t2.user_name
    </sql>


</mapper>
