<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.ems.mapper.BasCustomerBrandMapper">
    <resultMap type="com.platform.ems.domain.BasCustomerBrand" id="BasCustomerBrandResult">
        <result property="clientId" column="client_id"/>
        <result property="customerBrandSid" column="customer_brand_sid"/>
        <result property="customerSid" column="customer_sid"/>
        <result property="brandCode" column="brand_code"/>
        <result property="brandName" column="brand_name"/>
        <result property="remark" column="remark"/>
        <result property="status" column="status"/>
        <result property="creatorAccount" column="creator_account"/>
        <result property="creatorAccountName" column="creator_account_name"/>
        <result property="createDate" column="create_date"/>
        <result property="updaterAccount" column="updater_account"/>
        <result property="updateDate" column="update_date"/>
        <result property="dataSourceSys" column="data_source_sys"/>
    </resultMap>
    <sql id="selectBasCustomerBrandVo">
        select t.client_id,
               t.customer_brand_sid,
               t.customer_sid,
               t.brand_code,
               t.brand_name,
               t.remark,
               t.status,
               t.creator_account,
               t2.nick_name AS creator_account_name,
               t.create_date,
               t.updater_account,
               t.update_date,
               t.data_source_sys
        from s_bas_customer_brand t
        LEFT JOIN sys_user t2 on t.creator_account = t2.user_name
    </sql>
    <select id="selectBasCustomerBrandById" parameterType="String" resultMap="BasCustomerBrandResult">
        <include refid="selectBasCustomerBrandVo"/>
        where t.customer_brand_sid = #{customerBrandSid}
    </select>
    <select id="selectBasCustomerBrandList" parameterType="com.platform.ems.domain.BasCustomerBrand"
            resultMap="BasCustomerBrandResult">
        <include refid="selectBasCustomerBrandVo"/>
        <where>
            <if test="customerBrandSid != null  and customerBrandSid != ''">
                <foreach collection="customerSid.split(';')" item="item">
                    or t.customer_brand_sid like concat('%',#{item}, '%')
                </foreach>
            </if>
            <if test="customerSid != null  and customerSid != ''">
                and t.customer_sid =#{customerSid}
            </if>
            <if test="brandName != null  and brandName != ''">and
                t.brand_name like concat('%', #{brandName}, '%')
            </if>
            <if test="creatorAccount != null  and creatorAccount != ''">
                <foreach collection="creatorAccount.split(';')" item="item">or t.creator_account like concat('%',
                    #{item}, '%')
                </foreach>
            </if>
            <if test="beginTime != null and beginTime!=''">
                and date_format(t.create_date,'%y%m%d') &gt;= date_format(#{beginTime},'%y%m%d')
            </if>
            <if test="endTime != null and endTime!=''">
                and date_format(t.create_date,'%y%m%d') &lt;= date_format(#{endTime},'%y%m%d')
            </if>
            <if test="updaterAccount != null  and updaterAccount != ''">
                <foreach collection="updaterAccount.split(';')" item="item">or t.updater_account like concat('%',
                    #{item}, '%')
                </foreach>
            </if>
            <if test="updateDate != null ">
                and t.update_date = #{updateDate}
            </if>
            <if test="dataSourceSys != null  and dataSourceSys != ''">
                <foreach collection="dataSourceSys.split(';')" item="item">or t.data_source_sys like concat('%',
                    #{item}, '%')
                </foreach>
            </if>
        </where>
    </select>
    <!--添加多个-->
    <insert id="inserts">
        insert into s_bas_customer_brand
        <trim prefix="(" suffix=")" suffixOverrides=",">
            client_id,
            customer_brand_sid,
            customer_sid,
            brand_code,
            brand_name,
            remark,
            status,
            creator_account,
            create_date,
            updater_account,
            update_date,
            data_source_sys,
        </trim>
        values
            <foreach collection="list" item="o" separator=",">
                <trim prefix=" (" suffix=")" suffixOverrides=",">
                #{o.clientId},
                #{o.customerBrandSid},
                #{o.customerSid},
                #{o.brandCode},
                #{o.brandName},
                #{o.remark},
                #{o.status},
                #{o.creatorAccount},
                #{o.createDate},
                #{o.updaterAccount},
                #{o.updateDate},
                #{o.dataSourceSys},
                </trim>
            </foreach>
    </insert>
    <!--更新-->
    <update id="updateAllById">
        update s_bas_customer_brand
        <trim prefix="SET" suffixOverrides=",">
            customer_brand_sid = #{customerBrandSid},
            customer_sid = #{customerSid},
            brand_code = #{brandCode},
            brand_name = #{brandName},
            remark = #{remark},
            status = #{status},
            creator_account = #{creatorAccount},
            create_date = #{createDate},
            updater_account = #{updaterAccount},
            update_date = #{updateDate},
            data_source_sys = #{dataSourceSys},
        </trim>
        where customer_brand_sid = #{customerBrandSid}
    </update>
    <!--更新多个-->
    <update id="updatesAllById">
        <foreach collection="list" item="o" separator=";">
            update s_bas_customer_brand
            <trim prefix="SET" suffixOverrides=",">
                customer_brand_sid = #{customerBrandSid},
                customer_sid = #{customerSid},
                brand_code = #{brandCode},
                brand_name = #{brandName},
                remark = #{remark},
                status = #{status},
                creator_account = #{creatorAccount},
                create_date = #{createDate},
                updater_account = #{updaterAccount},
                update_date = #{updateDate},
                data_source_sys = #{dataSourceSys},
            </trim>
            where customer_brand_sid = #{customerBrandSid}
        </foreach>
    </update>
    <select id="selectBasCustomerBrandByCustomerSid" parameterType="Long" resultMap="BasCustomerBrandResult">
        <include refid="selectBasCustomerBrandVo"/>
        where t.customer_sid = #{customerSid}
    </select>
    <delete id="deleteByCustomerSid" parameterType="Long">
    	delete from s_bas_customer_brand where customer_sid = #{customerSid}
    </delete>
</mapper>
