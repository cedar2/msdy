                                    and date_format(t.create_date,'%y%m%d') &lt;= date_format(#{endTime},'%y%m%d')
                                </if>
                                                                                                                                                                                                                            <if test="endDateXishuiSp != null ">
                                    and t.end_date_xishui_sp = #{endDateXishuiSp}
                                </if>
                                                                                                                                                                                            <if test="updaterAccount != null and updaterAccount != ''">
                                and t.updater_account = #{updaterAccount}
                            </if>
                                                                                                                                                                                                <if test="updateDate != null ">
                                    and t.update_date = #{updateDate}
                                </if>
                                                                                                                                                                                            <if test="jinduRemark != null and jinduRemark != ''">
                                and t.jindu_remark = #{jinduRemark}
                            </if>
                                                                                                                                                                <if test="dataSourceSys != null and dataSourceSys != ''">
                                and t.data_source_sys = #{dataSourceSys}
                            </if>
                                                                                                                                                                <if test="jinduRemarkTg != null and jinduRemarkTg != ''">
                                and t.jindu_remark_tg = #{jinduRemarkTg}
                            </if>
                                                                                                                                                                <if test="jinduRemarkSp != null and jinduRemarkSp != ''">
                                and t.jindu_remark_sp = #{jinduRemarkSp}
                            </if>
                                                                                                                                                                <if test="workCenterSid != null ">
                                and t.work_center_sid = #{workCenterSid}
                            </if>
                                                                                                                                                                <if test="workCenterCode != null and workCenterCode != ''">
                                and t.work_center_code = #{workCenterCode}
                            </if>
                                                                                    <if test="params.dataScope != null and params.dataScope!=''">
                ${params.dataScope}
            </if>
        </where>
    </select>

