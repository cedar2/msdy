    </resultMap>

    <sql id="selectManMonthManufacturePlanItemVo">
select t.client_id,
       t.month_manufacture_plan_item_sid,
       t.month_manufacture_plan_sid,
       t.manufacture_order_sid,
       t.manufacture_order_code,
       t.material_sid,
       t.material_code,
       t.paichan_batch,
       t.days_number_chayi,
       t.item_num,
       t.days_number_plan,
       t.remark,
       t.plan_quantity_day_banzu,
       t.creator_account,
       t.end_date_xishui_tg,
       t.create_date,
       t.quantity_fenpei,
       t.end_date_xishui_sp,
       t.updater_account,
       t.update_date,
       t.jindu_remark,
       t.data_source_sys,
       t.jindu_remark_tg,
       t.jindu_remark_sp,
       t.work_center_sid,
       t.sku1_sid,
       t.sku1_code,
       t.sku1_type,
       t.enter_dimension,
       t11.sku_name as sku1_name,
       t.work_center_code,
       t4.work_center_name,
       t2.nick_name AS creator_account_name,
       t3.nick_name AS updater_account_name,
       t5.material_name,
       t6.quantity,
       t6.plan_end_date,
       t8.distribution_quantity,
       t10.is_caichuang_quantity
       from s_man_month_manufacture_plan_item t
        LEFT JOIN s_man_month_manufacture_plan t1 ON t.month_manufacture_plan_sid = t1.month_manufacture_plan_sid
        LEFT JOIN sys_user t2 ON t.creator_account = t2.user_name AND t.client_id = t2.client_id
        LEFT JOIN sys_user t3 ON t.updater_account = t3.user_name AND t.client_id = t3.client_id
        LEFT JOIN s_man_work_center t4 on t4.work_center_sid=t.work_center_sid
        LEFT JOIN s_bas_material t5 ON t5.material_sid = t.material_sid
        left join  s_man_manufacture_order t6 on t6.manufacture_order_sid=t.manufacture_order_sid
        left join (
         select  t7.manufacture_order_sid ,t7.work_center_sid,max(t7.quantity) as distribution_quantity
         from
         s_man_manufacture_order_process t7
        where t7.is_stage_complete='Y'
         group by t7.manufacture_order_sid,t7.work_center_sid
        ) t8 on t8.manufacture_order_sid=t.manufacture_order_sid and t8.work_center_sid=t.work_center_sid
        LEFT JOIN (
           SELECT t1.plant_sid, t.manufacture_order_sid, t.manufacture_order_process_sid,
                  t.sku1_sid, sum(t.quantity) as is_caichuang_quantity
           FROM s_man_day_manufacture_progress_item t
                    LEFT JOIN s_man_day_manufacture_progress t1 ON t1.day_manufacture_progress_sid = t.day_manufacture_progress_sid
                    LEFT JOIN s_man_manufacture_order_process t3 ON t3.manufacture_order_process_sid = t.manufacture_order_process_sid
           WHERE t1.handle_status='5' AND t3.is_first_process='Y'
           GROUP BY t.manufacture_order_sid, t.manufacture_order_process_sid, t1.plant_sid, t.sku1_sid
       ) t10 ON t.manufacture_order_sid = t10.manufacture_order_sid AND ((t.sku1_sid IS NULL AND t10.sku1_sid IS NULL) OR t.sku1_sid = t10.sku1_sid)
           AND t1.plant_sid = t10.plant_sid
         left join s_bas_sku t11 on t11.sku_sid=t.sku1_sid
    </sql>

    <select id="selectManMonthManufacturePlanItemById" parameterType="Long" resultMap="ManMonthManufacturePlanItemResult">
        <include refid="selectManMonthManufacturePlanItemVo"/>
        where t.month_manufacture_plan_item_sid = #{monthManufacturePlanItemSid}
    </select>

    <select id="getQuantityFenpei" parameterType="com.platform.ems.domain.ManMonthManufacturePlanItem" resultType="com.platform.ems.domain.ManMonthManufacturePlanItem">
                 select
                 t.quantity_fenpei,t.manufacture_order_sid,t.work_center_sid,t.sku1_sid
                 from
                 s_man_month_manufacture_plan_item t
                 left join s_man_month_manufacture_plan t2 on t2.month_manufacture_plan_sid=t.month_manufacture_plan_sid
                 <where>
                     t2.handle_status='5'
                     <if test="manufactureOrderSid != null">
                         and t.manufacture_order_sid = #{manufactureOrderSid}
                     </if>
                     <if test="workCenterSid != null">
                         and t.work_center_sid = #{workCenterSid}
                     </if>
                     <if test="sku1Sid != null">
                         and t.sku1_sid = #{sku1Sid}
                     </if>
                     <if test="sku1Sid == null">
                         and t.sku1_sid is null
                     </if>
                 </where>
                 order by  t2.yearmonth desc
                 limit 1
    </select>


