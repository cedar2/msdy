<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.ems.mapper.SysRoleAuthorityFieldValueMapper">

    <resultMap type="com.platform.ems.domain.SysRoleAuthorityFieldValue" id="SysRoleAuthorityFieldValueResult">
        <result property="clientId" column="client_id"/>
        <result property="roleAuthorityFieldValueSid" column="role_authority_field_value_sid"/>
        <result property="roleAuthorityObjectSid" column="role_authority_object_sid"/>
        <result property="authorityFieldSid" column="authority_field_sid"/>
        <result property="authorityFieldValue" column="authority_field_value"/>
        <result property="remark" column="remark"/>
        <result property="creatorAccount" column="creator_account"/>
        <result property="createDate" column="create_date"/>
        <result property="updaterAccount" column="updater_account"/>
        <result property="updateDate" column="update_date"/>
        <result property="dataSourceSys" column="data_source_sys"/>
        <result property="authorityObjectSid" column="dataobject_category_sid"/>
        <result property="authorityObjectCode" column="dataobject_category_code"/>
        <result property="authorityObjectName" column="dataobject_category_name"/>
        <result property="roleName" column="role_name"/>
        <result property="roleId" column="role_id"/>
        <result property="authorityObjectName" column="authority_object_sid"/>
        <result property="authorityObjectCode" column="authority_object_code"/>
        <result property="authorityObjectName" column="authority_object_name"/>
        <result property="authorityFieldCode" column="authority_field_code"/>
        <result property="authorityFieldName" column="authority_field_name"/>
        <result property="databaseFieldname" column="database_fieldname"/>
        <result property="authorityFieldCategory" column="authority_field_category"/>
        <result property="creatorAccountName" column="creator_account_name"/>
        <result property="updaterAccountName" column="updater_account_name"/>
    </resultMap>

    <sql id="selectSysRoleAuthorityFieldValueVo">
        select t.client_id,
               t.role_authority_field_value_sid,
               t.role_authority_object_sid,
               t.authority_field_sid,
               t.authority_field_code,
               t.authority_field_value,
               t.remark,
               t.creator_account,
               t.create_date,
               t.updater_account,
               t.update_date,
               t.data_source_sys,
               t2.nick_name AS creator_account_name,
               t3.nick_name AS updater_account_name,
        from s_sys_role_authority_field_value t
        left join sys_user t2 on  t.creator_account = t2.user_name
        left join sys_user t3 on  t.updater_account = t3.user_name
    </sql>

    <select id="selectSysRoleAuthorityFieldValueById" parameterType="Long" resultMap="SysRoleAuthorityFieldValueResult">
        <include refid="selectSysRoleAuthorityFieldValueVo"/>
        where t.role_authority_field_value_sid = #{roleAuthorityFieldValueSid}
    </select>


    <select id="selectSysRoleAuthorityFieldValueList"
            parameterType="com.platform.ems.domain.SysRoleAuthorityFieldValue"
            resultMap="SysRoleAuthorityFieldValueResult">
        <include refid="selectSysRoleAuthorityFieldValueVo"/>
        <where>
            <if test="clientId != null  and clientId != ''">
                and (<foreach collection="clientId.split(';')" item="item" separator="or">t.client_id like concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="roleAuthorityObjectSid != null ">
                and t.role_authority_object_sid =#{roleAuthorityObjectSid}
            </if>
            <if test="authorityFieldSid != null ">
                and t.authority_field_sid =#{authorityFieldSid}
            </if>
            <if test="authorityFieldCode != null and authorityFieldCode != ''">
                and t.authority_field_code =#{authorityFieldCode}
            </if>
            <if test="authorityFieldValue != null  and authorityFieldValue != ''">
                and (<foreach collection="authorityFieldValue.split(';')" item="item" separator="or">
                t.authority_field_value like concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="creatorAccount != null  and creatorAccount != ''">
                and (<foreach collection="creatorAccount.split(';')" item="item" separator="or">t.creator_account like
                concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="beginTime != null and beginTime!=''">
                and date_format(t.create_date,'%y%m%d') &gt;= date_format(#{beginTime},'%y%m%d')
            </if>
            <if test="endTime != null and endTime!=''">
                and date_format(t.create_date,'%y%m%d') &lt;= date_format(#{endTime},'%y%m%d')
            </if>
            <if test="updaterAccount != null  and updaterAccount != ''">
                and (<foreach collection="updaterAccount.split(';')" item="item" separator="or">t.updater_account like
                concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="updateDate != null ">
                and t.update_date = #{updateDate}
            </if>
            <if test="dataSourceSys != null  and dataSourceSys != ''">
                and (<foreach collection="dataSourceSys.split(';')" item="item" separator="or">t.data_source_sys like
                concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="params.dataScope != null and params.dataScope!=''">
                ${params.dataScope}
            </if>
        </where>
    </select>


    <!--添加多个-->
    <insert id="inserts">
        insert into s_sys_role_authority_field_value
        <trim prefix="(" suffix=")" suffixOverrides=",">
            client_id,
            role_authority_field_value_sid,
            role_authority_object_sid,
            authority_field_sid,
            authority_field_code,
            authority_field_value,
            remark,
            creator_account,
            create_date,
            updater_account,
            update_date,
            data_source_sys,
        </trim>
        values
        <foreach collection="list" item="item" separator=",">
            <trim prefix=" (" suffix=")" suffixOverrides=",">
                #{item.clientId},
                #{item.roleAuthorityObjectSid},
                #{item.authorityFieldSid},
                #{item.authorityFieldCode},
                #{item.authorityFieldValue},
                #{item.remark},
                #{item.creatorAccount},
                #{item.createDate},
                #{item.updaterAccount},
                #{item.updateDate},
                #{item.dataSourceSys},
            </trim>
        </foreach>
    </insert>

    <!--更新-->
    <update id="updateAllById">
        update s_sys_role_authority_field_value
        <trim prefix="SET" suffixOverrides=",">
            client_id = #{clientId},
            role_authority_field_value_sid = #{roleAuthorityFieldValueSid},
            role_authority_object_sid = #{roleAuthorityObjectSid},
            authority_field_sid = #{authorityFieldSid},
            authority_field_code = #{authorityFieldCode},
            authority_field_value = #{authorityFieldValue},
            remark = #{remark},
            creator_account = #{creatorAccount},
            create_date = #{createDate},
            updater_account = #{updaterAccount},
            update_date = #{updateDate},
            data_source_sys = #{dataSourceSys},
        </trim>
        where role_authority_field_value_sid = #{roleAuthorityFieldValueSid}
    </update>

    <!--更新多个-->
    <update id="updatesAllById">
        <foreach collection="list" item="o" separator=";">
            update s_sys_role_authority_field_value
            <trim prefix="SET" suffixOverrides=",">
                client_id = #{o.clientId},
                role_authority_field_value_sid = #{o.roleAuthorityFieldValueSid},
                role_authority_object_sid = #{o.roleAuthorityObjectSid},
                authority_field_sid = #{o.authorityFieldSid},
                authority_field_code = #{o.authorityFieldCode},
                authority_field_value = #{o.authorityFieldValue},
                remark = #{o.remark},
                creator_account = #{o.creatorAccount},
                create_date = #{o.createDate},
                updater_account = #{o.updaterAccount},
                update_date = #{o.updateDate},
                data_source_sys = #{o.dataSourceSys},
            </trim>
            where role_authority_field_value_sid = #{roleAuthorityFieldValueSid}
        </foreach>
    </update>


    <sql id="selectMoreRoleAuthorityFieldValueVo">
        SELECT t6.dataobject_category_sid,
               t7.code AS dataobject_category_code,
               t7.name AS dataobject_category_name,
               t8.role_name,
               t2.role_id,
               t2.authority_object_sid,
               t4.object_code AS authority_object_code,
               t4.object_name AS authority_object_name,
               t3.field_name AS authority_field_name,
               t5.database_fieldname,
               t3.category AS authority_field_category,
               t.*
        FROM s_sys_role_authority_field_value t
                 LEFT JOIN s_sys_role_authority_object t2 ON t.role_authority_object_sid = t2.role_authority_object_sid
                 LEFT JOIN s_sys_authority_field t3 ON t.authority_field_sid = t3.authority_field_sid
                 LEFT JOIN s_sys_authority_object t4 ON t2.authority_object_sid = t4.authority_object_sid
                 LEFT JOIN s_sys_authority_object_field t5 ON t2.authority_object_sid = t5.authority_object_sid
                 LEFT JOIN s_con_dataobject_authorityobject t6 ON t4.authority_object_sid = t6.authority_object_sid
                 LEFT JOIN s_con_dataobject_category t7 ON t6.dataobject_category_sid = t7.sid
                 LEFT JOIN sys_role t8 ON t2.role_id = t8.role_id
    </sql>

    <select id="selectMoreRoleAuthorityFieldValueList"
            parameterType="com.platform.ems.domain.SysRoleAuthorityFieldValue"
            resultMap="SysRoleAuthorityFieldValueResult">
        <include refid="selectMoreRoleAuthorityFieldValueVo"/>
        <where>
            <if test="roleIdList != null and roleIdList.size >0">
                and t8.role_id in
                (<foreach collection="roleIdList" item="roleId" separator=",">#{roleId}</foreach>)
            </if>
            <if test="roleId != null ">
                and t2.role_id = #{roleId}
            </if>
            <if test="dataobjectCategoryCode != null and dataobjectCategoryCode != ''">
                and t7.code = #{dataobjectCategoryCode}
            </if>
            <if test="databaseFieldname != null and databaseFieldname != ''">
                and t5.database_fieldname = #{databaseFieldname}
            </if>
            <if test="authorityFieldCode != null and authorityFieldCode != ''">
                and t.authority_field_code = #{authorityFieldCode}
            </if>
            <if test="clientId != null  and clientId != ''">
                and (<foreach collection="clientId.split(';')" item="item" separator="or">t.client_id like concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="roleAuthorityObjectSid != null ">
                and t.role_authority_object_sid =#{roleAuthorityObjectSid}
            </if>
            <if test="authorityFieldSid != null ">
                and t.authority_field_sid =#{authorityFieldSid}
            </if>
            <if test="authorityFieldValue != null  and authorityFieldValue != ''">
                and (<foreach collection="authorityFieldValue.split(';')" item="item" separator="or">
                t.authority_field_value like concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="dataSourceSys != null  and dataSourceSys != ''">
                and (<foreach collection="dataSourceSys.split(';')" item="item" separator="or">t.data_source_sys like
                concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="params.dataScope != null and params.dataScope!=''">
                ${params.dataScope}
            </if>
        </where>
    </select>

</mapper>
