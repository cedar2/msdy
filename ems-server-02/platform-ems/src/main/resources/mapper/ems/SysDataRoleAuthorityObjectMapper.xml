<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.ems.mapper.SysDataRoleAuthorityObjectMapper">

    <resultMap type="com.platform.ems.domain.SysDataRoleAuthorityObject" id="SysDataRoleAuthorityObjectResult">
        <result property="clientId" column="client_id"/>
        <result property="dataRoleAuthorityObjectSid" column="data_role_authority_object_sid"/>
        <result property="roleDataSid" column="role_data_sid"/>
        <result property="authorityObjectSid" column="authority_object_sid"/>
        <result property="remark" column="remark"/>
        <result property="creatorAccount" column="creator_account"/>
        <result property="createDate" column="create_date"/>
        <result property="updaterAccount" column="updater_account"/>
        <result property="updateDate" column="update_date"/>
        <result property="dataSourceSys" column="data_source_sys"/>
    </resultMap>

    <sql id="selectSysDataRoleAuthorityObjectVo">
        select t.client_id,
               t.data_role_authority_object_sid,
               t.role_data_sid,
               t.authority_object_sid,
               t.remark,
               t.creator_account,
               t.create_date,
               t.updater_account,
               t.update_date,
               t.data_source_sys,
               t1.role_data_code,
               t1.role_data_name,
               t2.object_code,
               t2.object_name
        from s_sys_data_role_authority_object t
        left join sys_role_data t1 on t.role_data_sid = t1.role_data_sid
        left join s_sys_authority_object t2 on t.authority_object_sid = t2.authority_object_sid
    </sql>

    <select id="selectSysDataRoleAuthorityObjectById" parameterType="Long" resultMap="SysDataRoleAuthorityObjectResult">
        <include refid="selectSysDataRoleAuthorityObjectVo"/>
        where t.data_role_authority_object_sid = #{dataRoleAuthorityObjectSid}
    </select>

    <select id="selectSysDataRoleAuthorityObjectList" parameterType="com.platform.ems.domain.SysDataRoleAuthorityObject"
            resultMap="SysDataRoleAuthorityObjectResult">
        <include refid="selectSysDataRoleAuthorityObjectVo"/>
        <where>
            <if test="clientId != null and clientId != ''">
                and t.client_id = #{clientId}
            </if>
            <if test="roleDataSid != null ">
                and t.role_data_sid = #{roleDataSid}
            </if>
            <if test="authorityObjectSid != null ">
                and t.authority_object_sid = #{authorityObjectSid}
            </if>
            <if test="creatorAccount != null and creatorAccount != ''">
                and t.creator_account = #{creatorAccount}
            </if>
            <if test="beginTime != null and beginTime!=''">
                and date_format(t.create_date,'%y%m%d') &gt;= date_format(#{beginTime},'%y%m%d')
            </if>
            <if test="endTime != null and endTime!=''">
                and date_format(t.create_date,'%y%m%d') &lt;= date_format(#{endTime},'%y%m%d')
            </if>
            <if test="updaterAccount != null and updaterAccount != ''">
                and t.updater_account = #{updaterAccount}
            </if>
            <if test="updateDate != null ">
                and t.update_date = #{updateDate}
            </if>
            <if test="dataSourceSys != null and dataSourceSys != ''">
                and t.data_source_sys = #{dataSourceSys}
            </if>
            <if test="params.dataScope != null and params.dataScope!=''">
                ${params.dataScope}
            </if>
        </where>
    </select>

    <!--添加多个-->
    <insert id="inserts">
        insert into s_sys_data_role_authority_object
        <trim prefix="(" suffix=")" suffixOverrides=",">
            client_id,
            data_role_authority_object_sid,
            role_data_sid,
            authority_object_sid,
            remark,
            creator_account,
            create_date,
            data_source_sys,
        </trim>
        values
        <foreach collection="list" item="item" separator=",">
            <trim prefix=" (" suffix=")" suffixOverrides=",">
                #{item.clientId},
                #{item.dataRoleAuthorityObjectSid},
                #{item.roleDataSid},
                #{item.authorityObjectSid},
                #{item.remark},
                #{item.creatorAccount},
                #{item.createDate},
                #{item.dataSourceSys},
            </trim>
        </foreach>
    </insert>

    <!--更新-->
    <update id="updateAllById">
        update s_sys_data_role_authority_object
        <trim prefix="SET" suffixOverrides=",">
            client_id = #{clientId},
            role_data_sid = #{roleDataSid},
            authority_object_sid = #{authorityObjectSid},
            remark = #{remark},
            updater_account = #{updaterAccount},
            update_date = #{updateDate},
        </trim>
        where data_role_authority_object_sid = #{dataRoleAuthorityObjectSid}
    </update>

</mapper>
