<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.ems.mapper.SysScmApproveSettingConfirmMapper">

    <resultMap type="com.platform.ems.domain.SysScmApproveSettingConfirm" id="SysScmApproveSettingConfirmResult">
        <result property="clientId" column="client_id"/>
        <result property="scmApproverSettingConfirmSid" column="scm_approver_setting_confirm_sid"/>
        <result property="dataObjectCode" column="data_object_code"/>
        <result property="approveKey" column="approve_key"/>
        <result property="plantCode" column="plant_code"/>
        <result property="status" column="status"/>
        <result property="remark" column="remark"/>
        <result property="creatorAccount" column="creator_account"/>
        <result property="createDate" column="create_date"/>
        <result property="updaterAccount" column="updater_account"/>
        <result property="updateDate" column="update_date"/>
        <result property="dataSourceSys" column="data_source_sys"/>
    </resultMap>

    <sql id="selectSysScmApproveSettingConfirmVo">
        select t.client_id,
               t.scm_approver_setting_confirm_sid,
               t.data_object_code,
               t.approve_key,
               t.plant_code,
               t.status,
               t.remark,
               t.creator_account,
               t.create_date,
               t.updater_account,
               t.update_date,
               t.data_source_sys
        from s_sys_scm_approve_setting_confirm t
    </sql>

    <select id="selectSysScmApproveSettingConfirmById" parameterType="Long"
            resultMap="SysScmApproveSettingConfirmResult">
        <include refid="selectSysScmApproveSettingConfirmVo"/>
        where t.scm_approver_setting_confirm_sid = #{scmApproverSettingConfirmSid}
    </select>

    <select id="selectSysScmApproveSettingConfirmList"
            parameterType="com.platform.ems.domain.SysScmApproveSettingConfirm"
            resultMap="SysScmApproveSettingConfirmResult">
        <include refid="selectSysScmApproveSettingConfirmVo"/>
        <where>
            <if test="clientId != null and clientId != ''">
                and t.client_id = #{clientId}
            </if>
            <if test="dataObjectCode != null and dataObjectCode != ''">
                and t.data_object_code = #{dataObjectCode}
            </if>
            <if test="approveKey != null and approveKey != ''">
                and t.approve_key = #{approveKey}
            </if>
            <if test="plantCode != null and plantCode != ''">
                and t.plant_code = #{plantCode}
            </if>
            <if test="status != null and status != ''">
                and t.status = #{status}
            </if>
            <if test="creatorAccount != null and creatorAccount != ''">
                and t.creator_account = #{creatorAccount}
            </if>
            <if test="beginTime != null and beginTime!=''">
                and date_format(t.create_date,'%y%m%d') &gt;= date_format(#{beginTime},'%y%m%d')
            </if>
            <if test="endTime != null and endTime!=''">
                and date_format(t.create_date,'%y%m%d') &lt;= date_format(#{endTime},'%y%m%d')
            </if>
            <if test="updaterAccount != null and updaterAccount != ''">
                and t.updater_account = #{updaterAccount}
            </if>
            <if test="updateDate != null ">
                and t.update_date = #{updateDate}
            </if>
            <if test="dataSourceSys != null and dataSourceSys != ''">
                and t.data_source_sys = #{dataSourceSys}
            </if>
            <if test="params.dataScope != null and params.dataScope!=''">
                ${params.dataScope}
            </if>
        </where>
    </select>

    <!--添加多个-->
    <insert id="inserts">
        insert into s_sys_scm_approve_setting_confirm
        <trim prefix="(" suffix=")" suffixOverrides=",">
            client_id,
            scm_approver_setting_confirm_sid,
            data_object_code,
            approve_key,
            plant_code,
            status,
            remark,
            creator_account,
            create_date,
            data_source_sys,
        </trim>
        values
        <foreach collection="list" item="item" separator=",">
            <trim prefix=" (" suffix=")" suffixOverrides=",">
                #{item.clientId},
                #{item.scmApproverSettingConfirmSid},
                #{item.dataObjectCode},
                #{item.approveKey},
                #{item.plantCode},
                #{item.status},
                #{item.remark},
                #{item.creatorAccount},
                #{item.createDate},
                #{item.dataSourceSys},
            </trim>
        </foreach>
    </insert>

    <!--更新-->
    <update id="updateAllById">
        update s_sys_scm_approve_setting_confirm
        <trim prefix="SET" suffixOverrides=",">
            data_object_code = #{dataObjectCode},
            approve_key = #{approveKey},
            plant_code = #{plantCode},
            status = #{status},
            remark = #{remark},
            updater_account = #{updaterAccount},
            update_date = #{updateDate},
        </trim>
        where scm_approver_setting_confirm_sid = #{scmApproverSettingConfirmSid}
    </update>

    <!--更新多个-->
    <update id="updatesAllById">
        <foreach collection="list" item="o" separator=";">
            update s_sys_scm_approve_setting_confirm
            <trim prefix="SET" suffixOverrides=",">
                data_object_code = #{o.dataObjectCode},
                approve_key = #{o.approveKey},
                plant_code = #{o.plantCode},
                status = #{o.status},
                remark = #{o.remark},
                updater_account = #{o.updaterAccount},
                update_date = #{o.updateDate},
            </trim>
            where scm_approver_setting_confirm_sid = #{o.scmApproverSettingConfirmSid}
        </foreach>
    </update>

</mapper>
