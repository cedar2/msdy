                    <result property="workattendDate" column="workattend_date"/>
                    <result property="plantSid" column="plant_sid"/>
                    <result property="plantCode" column="plant_code"/>
                    <result property="workCenterSid" column="work_center_sid"/>
                    <result property="workCenterCode" column="work_center_code"/>
                    <result property="department" column="department"/>
                    <result property="workShift" column="work_shift"/>
                    <result property="yingcq" column="yingcq"/>
                    <result property="shicq" column="shicq"/>
                    <result property="qingj" column="qingj"/>
                    <result property="dail" column="dail"/>
                    <result property="kuangg" column="kuangg"/>
                    <result property="quek" column="quek"/>
                    <result property="chid" column="chid"/>
                    <result property="zaot" column="zaot"/>
                    <result property="remark" column="remark"/>
