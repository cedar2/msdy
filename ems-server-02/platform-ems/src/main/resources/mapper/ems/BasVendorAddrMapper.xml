        </trim>
    </insert>

    <update id="updateBasVendorAddr" parameterType="com.platform.ems.domain.BasVendorAddr">
        update s_bas_vendor_addr
        <trim prefix="SET" suffixOverrides=",">
            <if test="clientId != null and clientId != ''">client_id = #{clientId},</if>
            <if test="vendorSid != null">vendor_sid = #{vendorSid},</if>
            <if test="contactInforCode != null">contact_infor_code = #{contactInforCode},</if>
            <if test="contacterName != null and contacterName != ''">contacter_name = #{contacterName},</if>
            <if test="contacterPosition != null">contacter_position = #{contacterPosition},</if>
            <if test="contacterMobphone != null and contacterMobphone != ''">contacter_mobphone =
                #{contacterMobphone},
            </if>
            <if test="contacterTelephone != null">contacter_telephone = #{contacterTelephone},</if>
