    <delete id="deleteBasVendorAddrById" parameterType="Long">
        delete
        from s_bas_vendor_addr
        where client_id = #{clientId}
    </delete>

    <delete id="deleteBasVendorAddrByIds" parameterType="Long">
        delete from s_bas_vendor_addr where vendor_contact_sid in
