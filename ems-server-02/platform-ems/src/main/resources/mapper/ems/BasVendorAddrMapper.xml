        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="clientId != null">#{clientId},</if>
            <if test="vendorContactSid != null and vendorContactSid != ''">#{vendorContactSid},</if>
            <if test="vendorSid != null">#{vendorSid},</if>
            <if test="contactInforCode != null">#{contactInforCode},</if>
            <if test="contacterName != null and contacterName != ''">#{contacterName},</if>
            <if test="contacterPosition != null">#{contacterPosition},</if>
            <if test="contacterMobphone != null and contacterMobphone != ''">#{contacterMobphone},</if>
