<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.ems.mapper.AssAssetRecordAttachMapper">

    <resultMap type="com.platform.ems.domain.AssAssetRecordAttach" id="AssAssetRecordAttachResult">
        <result property="clientId" column="client_id"/>
        <result property="assetAttachmentSid" column="asset_attachment_sid"/>
        <result property="assetSid" column="asset_sid"/>
        <result property="fileType" column="file_type"/>
        <result property="fileTypeName" column="file_type_name"/>
        <result property="fileName" column="file_name"/>
        <result property="filePath" column="file_path"/>
        <result property="remark" column="remark"/>
        <result property="creatorAccount" column="creator_account"/>
        <result property="createDate" column="create_date"/>
        <result property="updaterAccount" column="updater_account"/>
        <result property="updateDate" column="update_date"/>
        <result property="dataSourceSys" column="data_source_sys"/>
        <result property="creatorAccountName" column="creator_account_name"/>
        <result property="updaterAccountName" column="updater_account_name"/>
    </resultMap>

    <sql id="selectAssAssetRecordAttachVo">
        select t.client_id,
               t.asset_attachment_sid,
               t.asset_sid,
               t.file_type,
               t.file_name,
               t.file_path,
               t.remark,
               t.creator_account,
               t.create_date,
               t.updater_account,
               t.update_date,
               t.data_source_sys,
               t2.nick_name AS creator_account_name,
               t3.nick_name AS updater_account_name,
               t4.name AS file_type_name
        from s_ass_asset_record_attach t
         LEFT JOIN sys_user t2 ON t.creator_account = t2.user_name
         LEFT JOIN sys_user t3 ON t.updater_account = t3.user_name
         LEFT JOIN s_con_file_type t4 ON t.file_type = t4.code AND 'AssetRecord' = t4.dataobject_category_code
    </sql>

    <select id="selectAssAssetRecordAttachById" parameterType="Long" resultMap="AssAssetRecordAttachResult">
        <include refid="selectAssAssetRecordAttachVo"/>
        where t.asset_attachment_sid = #{assetAttachmentSid}
    </select>

    <select id="selectAssAssetRecordAttachList" parameterType="com.platform.ems.domain.AssAssetRecordAttach"
            resultMap="AssAssetRecordAttachResult">
        <include refid="selectAssAssetRecordAttachVo"/>
        <where>
            <if test="clientId != null  and clientId != ''">
                and t.client_id = #{clientId}
            </if>
            <if test="assetSid != null ">
                and t.asset_sid =#{assetSid}
            </if>
            <if test="fileType != null  and fileType != ''">
                and t.file_type = #{fileType}
            </if>
            <if test="fileName != null  and fileName != ''">and
                t.file_name like concat('%', #{fileName}, '%')
            </if>
            <if test="filePath != null  and filePath != ''">
                and t.file_path like concat('%', #{filePath}, '%')
            </if>
            <if test="creatorAccount != null  and creatorAccount != ''">
                and t.creator_account = #{creatorAccount}
            </if>
            <if test="beginTime != null and beginTime!=''">
                and date_format(t.create_date,'%y%m%d') &gt;= date_format(#{beginTime},'%y%m%d')
            </if>
            <if test="endTime != null and endTime!=''">
                and date_format(t.create_date,'%y%m%d') &lt;= date_format(#{endTime},'%y%m%d')
            </if>
            <if test="updateDate != null ">
                and t.update_date = #{updateDate}
            </if>
            <if test="dataSourceSys != null  and dataSourceSys != ''">
                and t.data_source_sys = #{dataSourceSys}
            </if>
            <if test="params.dataScope != null and params.dataScope!=''">
                ${params.dataScope}
            </if>
        </where>
    </select>

    <!--添加多个-->
    <insert id="inserts">
        insert into s_ass_asset_record_attach
        <trim prefix="(" suffix=")" suffixOverrides=",">
            client_id,
            asset_attachment_sid,
            asset_sid,
            file_type,
            file_name,
            file_path,
            remark,
            creator_account,
            create_date,
            updater_account,
            update_date,
            data_source_sys,
        </trim>
        values
        <foreach collection="list" item="item" separator=",">
            <trim prefix=" (" suffix=")" suffixOverrides=",">
                #{item.clientId},
                #{item.assetAttachmentSid},
                #{item.assetSid},
                #{item.fileType},
                #{item.fileName},
                #{item.filePath},
                #{item.remark},
                #{item.creatorAccount},
                #{item.createDate},
                #{item.updaterAccount},
                #{item.updateDate},
                #{item.dataSourceSys},
            </trim>
        </foreach>
    </insert>

    <!--更新-->
    <update id="updateAllById">
        update s_ass_asset_record_attach
        <trim prefix="SET" suffixOverrides=",">
            asset_sid = #{assetSid},
            file_type = #{fileType},
            file_name = #{fileName},
            file_path = #{filePath},
            remark = #{remark},
            updater_account = #{updaterAccount},
            update_date = #{updateDate},
            data_source_sys = #{dataSourceSys},
        </trim>
        where asset_attachment_sid = #{assetAttachmentSid}
    </update>

    <!--更新多个-->
    <update id="updatesAllById">
        <foreach collection="list" item="o" separator=";">
            update s_ass_asset_record_attach
            <trim prefix="SET" suffixOverrides=",">
                asset_sid = #{assetSid},
                file_type = #{fileType},
                file_name = #{fileName},
                file_path = #{filePath},
                remark = #{remark},
                updater_account = #{updaterAccount},
                update_date = #{updateDate},
                data_source_sys = #{dataSourceSys},
            </trim>
            where asset_attachment_sid = #{assetAttachmentSid}
        </foreach>
    </update>

</mapper>
