<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.ems.mapper.RepPurchaseStatusMaterialMapper">

    <resultMap type="com.platform.ems.domain.RepPurchaseStatusMaterial" id="RepPurchaseStatusMaterialResult">
        <result property="clientId" column="client_id"/>
        <result property="dataRecordSid" column="data_record_sid"/>
        <result property="purchaseOrderSid" column="purchase_order_sid"/>
        <result property="purchaseOrderCode" column="purchase_order_code"/>
        <result property="materialTypeCode" column="material_type_code"/>
        <result property="materialTypeName" column="material_type_name"/>
        <result property="productSeasonCode" column="product_season_code"/>
        <result property="year" column="year"/>
        <result property="moth" column="moth"/>
        <result property="vendorCode" column="vendor_code"/>
        <result property="vendorShortName" column="vendor_short_name"/>
        <result property="companyCode" column="company_code"/>
        <result property="companyName" column="company_name"/>
        <result property="documentTypeCode" column="document_type_code"/>
        <result property="documentTypeName" column="document_type_name"/>
        <result property="businessTypeCode" column="business_type_code"/>
        <result property="businessTypeName" column="business_type_name"/>
        <result property="purchaseModeCode" column="purchase_mode_code"/>
        <result property="purchaseModeName" column="purchase_mode_name"/>
        <result property="moneyAmount" column="money_amount"/>
        <result property="quantity" column="quantity"/>
        <result property="currency" column="currency"/>
        <result property="currencyUnit" column="currency_unit"/>
        <result property="createDate" column="create_date"/>
    </resultMap>

    <sql id="selectRepPurchaseStatusMaterialVo">
        select t.client_id,
               t.data_record_sid,
               t.purchase_order_sid,
               t.purchase_order_code,
               t.material_type_code,
               t.material_type_name,
               t.product_season_code,
               t.year,
               t.moth,
               t.vendor_code,
               t.vendor_short_name,
               t.company_code,
               t.company_name,
               t.document_type_code,
               t.document_type_name,
               t.business_type_code,
               t.business_type_name,
               t.purchase_mode_code,
               t.purchase_mode_name,
               t.money_amount,
               t.quantity,
               t.currency,
               t.currency_unit,
               t.create_date
        from s_rep_purchase_status_material t
    </sql>

    <select id="selectRepPurchaseStatusMaterialById" parameterType="Long" resultMap="RepPurchaseStatusMaterialResult">
        <include refid="selectRepPurchaseStatusMaterialVo"/>
        where t.data_record_sid = #{dataRecordSid}
    </select>


    <select id="selectRepPurchaseStatusMaterialList" parameterType="com.platform.ems.domain.RepPurchaseStatusMaterial"
            resultMap="RepPurchaseStatusMaterialResult">
        <include refid="selectRepPurchaseStatusMaterialVo"/>
        <where>
            <if test="clientId != null  and clientId != ''">
                and (<foreach collection="clientId.split(';')" item="item" separator="or">t.client_id =
                #{item}</foreach>)
            </if>
            <if test="purchaseOrderSid != null ">
                and t.purchase_order_sid =#{purchaseOrderSid}
            </if>
            <if test="purchaseOrderCode != null ">
                and t.purchase_order_code =#{purchaseOrderCode}
            </if>
            <if test="materialTypeCode != null  and materialTypeCode != ''">
                and (<foreach collection="materialTypeCode.split(';')" item="item" separator="or">t.material_type_code
                = #{item}</foreach>)
            </if>
            <if test="materialTypeName != null  and materialTypeName != ''">and
                t.material_type_name like concat('%', #{materialTypeName}, '%')
            </if>
            <if test="productSeasonCode != null  and productSeasonCode != ''">
                and (<foreach collection="productSeasonCode.split(';')" item="item" separator="or">t.product_season_code
                like concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="year != null ">
                and t.year =#{year}
            </if>
            <if test="moth != null ">
                and t.moth =#{moth}
            </if>
            <if test="vendorCode != null ">
                and t.vendor_code =#{vendorCode}
            </if>
            <if test="vendorShortName != null  and vendorShortName != ''">and
                t.vendor_short_name like concat('%', #{vendorShortName}, '%')
            </if>
            <if test="companyCode != null  and companyCode != ''">
                and (<foreach collection="companyCode.split(';')" item="item" separator="or">t.company_code
                like concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="companyName != null  and companyName != ''">and
                t.company_name like concat('%', #{companyName}, '%')
            </if>
            <if test="documentTypeCode != null  and documentTypeCode != ''">
                and (<foreach collection="documentTypeCode.split(';')" item="item" separator="or">t.document_type_code
                = #{item}</foreach>)
            </if>
            <if test="documentTypeName != null  and documentTypeName != ''">and
                t.document_type_name like concat('%', #{documentTypeName}, '%')
            </if>
            <if test="businessTypeCode != null  and businessTypeCode != ''">
                and (<foreach collection="businessTypeCode.split(';')" item="item" separator="or">t.business_type_code
                = #{item}</foreach>)
            </if>
            <if test="businessTypeName != null  and businessTypeName != ''">and
                t.business_type_name like concat('%', #{businessTypeName}, '%')
            </if>
            <if test="purchaseModeCode != null  and purchaseModeCode != ''">
                and (<foreach collection="purchaseModeCode.split(';')" item="item" separator="or">t.purchase_mode_code
                = #{item}</foreach>)
            </if>
            <if test="purchaseModeName != null  and purchaseModeName != ''">and
                t.purchase_mode_name like concat('%', #{purchaseModeName}, '%')
            </if>
            <if test="moneyAmount != null ">
                and t.money_amount = #{moneyAmount}
            </if>
            <if test="quantity != null ">
                and t.quantity = #{quantity}
            </if>
            <if test="currency != null  and currency != ''">
                and (<foreach collection="currency.split(';')" item="item" separator="or">t.currency
                = #{item}</foreach>)
            </if>
            <if test="currencyUnit != null  and currencyUnit != ''">
                and (<foreach collection="currencyUnit.split(';')" item="item" separator="or">t.currency_unit
                = #{item}</foreach>)
            </if>
            <if test="beginTime != null and beginTime!=''">
                and date_format(t.create_date,'%y%m%d') &gt;= date_format(#{beginTime},'%y%m%d')
            </if>
            <if test="endTime != null and endTime!=''">
                and date_format(t.create_date,'%y%m%d') &lt;= date_format(#{endTime},'%y%m%d')
            </if>
            <if test="params.dataScope != null and params.dataScope!=''">
                ${params.dataScope}
            </if>
        </where>
    </select>


    <!--添加多个-->
    <insert id="inserts">
        insert into s_rep_purchase_status_material
        <trim prefix="(" suffix=")" suffixOverrides=",">
            client_id,
            data_record_sid,
            purchase_order_sid,
            purchase_order_code,
            material_type_code,
            material_type_name,
            product_season_code,
            year,
            moth,
            vendor_code,
            vendor_short_name,
            company_code,
            company_name,
            document_type_code,
            document_type_name,
            business_type_code,
            business_type_name,
            purchase_mode_code,
            purchase_mode_name,
            money_amount,
            quantity,
            currency,
            currency_unit,
            create_date,
        </trim>
        values
        <foreach collection="list" item="item" separator=",">
            <trim prefix=" (" suffix=")" suffixOverrides=",">
                #{item.clientId},
                #{item.dataRecordSid},
                #{item.purchaseOrderSid},
                #{item.purchaseOrderCode},
                #{item.materialTypeCode},
                #{item.materialTypeName},
                #{item.productSeasonCode},
                #{item.year},
                #{item.moth},
                #{item.vendorCode},
                #{item.vendorShortName},
                #{item.companyCode},
                #{item.companyName},
                #{item.documentTypeCode},
                #{item.documentTypeName},
                #{item.businessTypeCode},
                #{item.businessTypeName},
                #{item.purchaseModeCode},
                #{item.purchaseModeName},
                #{item.moneyAmount},
                #{item.quantity},
                #{item.currency},
                #{item.currencyUnit},
                #{item.createDate},
            </trim>
        </foreach>
    </insert>

    <!--更新-->
    <update id="updateAllById">
        update s_rep_purchase_status_material
        <trim prefix="SET" suffixOverrides=",">
            purchase_order_sid = #{purchaseOrderSid},
            purchase_order_code = #{purchaseOrderCode},
            material_type_code = #{materialTypeCode},
            material_type_name = #{materialTypeName},
            product_season_code = #{productSeasonCode},
            year = #{year},
            moth = #{moth},
            vendor_code = #{vendorCode},
            vendor_short_name = #{vendorShortName},
            company_code = #{companyCode},
            company_name = #{companyName},
            document_type_code = #{documentTypeCode},
            document_type_name = #{documentTypeName},
            business_type_code = #{businessTypeCode},
            business_type_name = #{businessTypeName},
            purchase_mode_code = #{purchaseModeCode},
            purchase_mode_name = #{purchaseModeName},
            money_amount = #{moneyAmount},
            quantity = #{quantity},
            currency = #{currency},
            currency_unit = #{currencyUnit},
        </trim>
        where data_record_sid = #{dataRecordSid}
    </update>

    <!--更新多个-->
    <update id="updatesAllById">
        <foreach collection="list" item="o" separator=";">
            update s_rep_purchase_status_material
            <trim prefix="SET" suffixOverrides=",">
                purchase_order_sid = #{purchaseOrderSid},
                purchase_order_code = #{purchaseOrderCode},
                material_type_code = #{materialTypeCode},
                material_type_name = #{materialTypeName},
                product_season_code = #{productSeasonCode},
                year = #{year},
                moth = #{moth},
                vendor_code = #{vendorCode},
                vendor_short_name = #{vendorShortName},
                company_code = #{companyCode},
                company_name = #{companyName},
                document_type_code = #{documentTypeCode},
                document_type_name = #{documentTypeName},
                business_type_code = #{businessTypeCode},
                business_type_name = #{businessTypeName},
                purchase_mode_code = #{purchaseModeCode},
                purchase_mode_name = #{purchaseModeName},
                money_amount = #{moneyAmount},
                quantity = #{quantity},
                currency = #{currency},
                currency_unit = #{currencyUnit},
            </trim>
            where data_record_sid = #{dataRecordSid}
        </foreach>
    </update>

</mapper>
