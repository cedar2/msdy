    <sql id="selectBasCustomerVo">
        SELECT
			t.client_id,
			t.customer_sid,
			t.customer_code,
			t.customer_name,
			t.short_name,
			t.customer_group,
			t.distribute_channel_category,
		    t6.name AS distribute_channel_category_name,
			t.industry_code,
			t.customer_property,
			t.company_sid,
			t.relate_company_sid,
			t.vendor_sid,
			t.customer_level,
			t.customer_category,
			t.customer_type,
			t.superior_customer_sid,
			t.owner_name,
			t.credit_code,
            t.cooperate_status,
			t.original_customer_sid,
			t.credit_start_date,
			t.credit_end_date,
			t.country,
			t.province,
			t.city,
			t.register_date,
			t.register_capital,
			t.register_capital_currency,
			t.internet_url,
			t.taxpayer_identify_number,
			t.invoice_tel,
			t.invoice_addr,
			t.office_addr,
			t.business_scope,
			t.picture_path,
            t.bu_operator,
            t10.nick_name AS bu_operator_name,
            t.bu_operator_customer,
			t.remark,
			t.disable_remark,
			t.STATUS,
			t.handle_status,
			t.creator_account,
			t.create_date,
			t.updater_account,
			t.update_date,
			t.confirmer_account,
			t.confirm_date,
			t.data_source_sys,
			t2.company_name,
			t3.company_name as relate_company_name,
			t4.vendor_name,
			t5.customer_name as superior_customer_name,
			t7.nick_name AS creator_account_name,
	        t8.nick_name AS updater_account_name,
	        t9.nick_name AS confirmer_account_name
		FROM
			s_bas_customer t
		LEFT JOIN s_bas_company t2 ON t.company_sid = t2.company_sid
		LEFT JOIN s_bas_company t3 ON t.relate_company_sid = t3.company_sid
