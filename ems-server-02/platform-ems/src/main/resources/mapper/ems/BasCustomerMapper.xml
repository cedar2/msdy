    <select id="getCustomerList" resultType="com.platform.ems.domain.BasCustomer">
        select customer_sid,customer_code,customer_name,customer_group,
            ifnull(short_name,customer_name) as short_name,
            customer_type,status,handle_status
        from s_bas_customer
        <where>
            <if test="customerCodeName != null and customerCodeName != ''">
                and (customer_code like concat('%', #{customerCodeName}, '%')
                or customer_name like concat('%', #{customerCodeName}, '%')
                or short_name like concat('%', #{customerCodeName}, '%'))
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
            <if test="handleStatus != null and handleStatus != ''">
                and handle_status = #{handleStatus}
            </if>
        </where>
        order by customer_name asc
    </select>

