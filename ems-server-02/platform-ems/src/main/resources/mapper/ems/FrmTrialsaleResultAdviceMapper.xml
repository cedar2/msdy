<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.ems.mapper.FrmTrialsaleResultAdviceMapper">

    <resultMap type="com.platform.ems.domain.FrmTrialsaleResultAdvice" id="FrmTrialsaleResultAdviceResult">
        <result property="clientId" column="client_id"/>
        <result property="trialsaleResultAdviceSid" column="trialsale_result_advice_sid"/>
        <result property="trialsaleResultSid" column="trialsale_result_sid"/>
        <result property="optimizeItem" column="optimize_item"/>
        <result property="comment" column="comment"/>
        <result property="remark" column="remark"/>
        <result property="creatorAccount" column="creator_account"/>
        <result property="createDate" column="create_date"/>
        <result property="updaterAccount" column="updater_account"/>
        <result property="updateDate" column="update_date"/>
        <result property="dataSourceSys" column="data_source_sys"/>
        <result property="creatorAccountName" column="creator_account_name"/>
        <result property="updaterAccountName" column="updater_account_name"/>
    </resultMap>

    <sql id="selectFrmTrialsaleResultAdviceVo">
        select t.client_id,
               t.trialsale_result_advice_sid,
               t.trialsale_result_sid,
               t.optimize_item,
               t.comment,
               t.remark,
               t.creator_account,
               t.create_date,
               t.updater_account,
               t.update_date,
               t.data_source_sys,
               t2.nick_name AS creator_account_name,
               t3.nick_name AS updater_account_name
        from s_frm_trialsale_result_advice t
         LEFT JOIN sys_user t2 ON t.creator_account = t2.user_name AND t.client_id = t2.client_id
         LEFT JOIN sys_user t3 ON t.updater_account = t3.user_name AND t.client_id = t3.client_id
    </sql>

    <select id="selectFrmTrialsaleResultAdviceById" parameterType="Long" resultMap="FrmTrialsaleResultAdviceResult">
        <include refid="selectFrmTrialsaleResultAdviceVo"/>
        where t.trialsale_result_advice_sid = #{trialsaleResultAdviceSid}
    </select>

    <select id="selectFrmTrialsaleResultAdviceList" parameterType="com.platform.ems.domain.FrmTrialsaleResultAdvice"
            resultMap="FrmTrialsaleResultAdviceResult">
        <include refid="selectFrmTrialsaleResultAdviceVo"/>
        <where>
            <if test="clientId != null and clientId != ''">
                and t.client_id = #{clientId}
            </if>
            <if test="trialsaleResultAdviceSid != null ">
                and t.trialsale_result_advice_sid = #{trialsaleResultAdviceSid}
            </if>
            <if test="trialsaleResultSid != null ">
                and t.trialsale_result_sid = #{trialsaleResultSid}
            </if>
            <if test="optimizeItem != null and optimizeItem != ''">
                and t.optimize_item = #{optimizeItem}
            </if>
            <if test="comment != null and comment != ''">
                and t.comment = #{comment}
            </if>
            <if test="creatorAccount != null and creatorAccount != ''">
                and t.creator_account = #{creatorAccount}
            </if>
            <if test="creatorAccountName != null and creatorAccountName != ''">
                and t2.nick_name like concat('%', #{creatorAccountName}, '%')
            </if>
            <if test="createDate != null ">
                and date_format(t.create_date,'%y%m%d') = date_format(#{createDate},'%y%m%d')
            </if>
            <if test="beginTime != null and beginTime!=''">
                and date_format(t.create_date,'%y%m%d') &gt;= date_format(#{beginTime},'%y%m%d')
            </if>
            <if test="endTime != null and endTime!=''">
                and date_format(t.create_date,'%y%m%d') &lt;= date_format(#{endTime},'%y%m%d')
            </if>
            <if test="updaterAccount != null and updaterAccount != ''">
                and t.updater_account = #{updaterAccount}
            </if>
            <if test="updateDate != null ">
                and t.update_date = #{updateDate}
            </if>
            <if test="dataSourceSys != null and dataSourceSys != ''">
                and t.data_source_sys = #{dataSourceSys}
            </if>
            <if test="params.dataScope != null and params.dataScope!=''">
                ${params.dataScope}
            </if>
        </where>
    </select>

    <!--添加多个-->
    <insert id="inserts">
        insert into s_frm_trialsale_result_advice
        <trim prefix="(" suffix=")" suffixOverrides=",">
            client_id,
            trialsale_result_advice_sid,
            trialsale_result_sid,
            optimize_item,
            comment,
            remark,
            creator_account,
            create_date,
            updater_account,
            update_date,
            data_source_sys,
        </trim>
        values
        <foreach collection="list" item="item" separator=",">
            <trim prefix=" (" suffix=")" suffixOverrides=",">
                #{item.clientId},
                #{item.trialsaleResultAdviceSid},
                #{item.trialsaleResultSid},
                #{item.optimizeItem},
                #{item.comment},
                #{item.remark},
                #{item.creatorAccount},
                #{item.createDate},
                #{item.updaterAccount},
                #{item.updateDate},
                #{item.dataSourceSys},
            </trim>
        </foreach>
    </insert>

    <!--更新-->
    <update id="updateAllById">
        update s_frm_trialsale_result_advice
        <trim prefix="SET" suffixOverrides=",">
            client_id = #{clientId},
            trialsale_result_sid = #{trialsaleResultSid},
            optimize_item = #{optimizeItem},
            comment = #{comment},
            remark = #{remark},
            updater_account = #{updaterAccount},
            update_date = #{updateDate},
        </trim>
        where trialsale_result_advice_sid = #{trialsaleResultAdviceSid}
    </update>

    <!--更新多个-->
    <update id="updatesAllById">
        <foreach collection="list" item="o" separator=";">
            update s_frm_trialsale_result_advice
            <trim prefix="SET" suffixOverrides=",">
                client_id = #{clientId},
                trialsale_result_sid = #{trialsaleResultSid},
                optimize_item = #{optimizeItem},
                comment = #{comment},
                remark = #{remark},
                updater_account = #{updaterAccount},
                update_date = #{updateDate},
            </trim>
            where trialsale_result_advice_sid = #{trialsaleResultAdviceSid}
        </foreach>
    </update>

</mapper>
