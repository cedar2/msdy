<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.ems.mapper.DelDeliveryNoteAttachmentMapper">

    <resultMap type="com.platform.ems.domain.DelDeliveryNoteAttachment" id="DelDeliveryNoteAttachmentResult">
        <result property="clientId" column="client_id"/>
        <result property="deliveryNoteAttachmentSid" column="delivery_note_attachment_sid"/>
        <result property="deliveryNoteSid" column="delivery_note_sid"/>
        <result property="fileType" column="file_type"/>
        <result property="fileName" column="file_name"/>
        <result property="filePath" column="file_path"/>
        <result property="remark" column="remark"/>
        <result property="creatorAccount" column="creator_account"/>
        <result property="createDate" column="create_date"/>
        <result property="updaterAccount" column="updater_account"/>
        <result property="updateDate" column="update_date"/>
        <result property="dataSourceSys" column="data_source_sys"/>
    </resultMap>

    <sql id="selectDelDeliveryNoteAttachmentVo">
        select t.client_id,
               t.delivery_note_attachment_sid,
               t.delivery_note_sid,
               t.file_type,
               t.file_name,
               t.file_path,
               t.remark,
               t.creator_account,
               t.create_date,
               t.updater_account,
               t.update_date,
               t.data_source_sys,
               t1.name AS file_type_name,
               t2.nick_name AS creator_account_name
        from s_del_delivery_note_attachment t
        left join s_con_file_type t1 on t1.code = t.file_type and t1.dataobject_category_code = 'DeliveryNote'
        left join sys_user t2 on t.creator_account = t2.user_name
    </sql>

    <select id="selectDelDeliveryNoteAttachmentById" parameterType="Long" resultMap="DelDeliveryNoteAttachmentResult">
        <include refid="selectDelDeliveryNoteAttachmentVo"/>
        where t.delivery_note_attachment_sid = #{deliveryNoteAttachmentSid}
    </select>

    <select id="selectDelDeliveryNoteAttachmentList" parameterType="com.platform.ems.domain.DelDeliveryNoteAttachment"
            resultMap="DelDeliveryNoteAttachmentResult">
        <include refid="selectDelDeliveryNoteAttachmentVo"/>
        <where>
            <if test="clientId != null and clientId != ''">
                and t.client_id = #{clientId}
            </if>
            <if test="deliveryNoteSid != null ">
                and t.delivery_note_sid = #{deliveryNoteSid}
            </if>
            <if test="fileType != null and fileType != ''">
                and t.file_type = #{fileType}
            </if>
            <if test="fileName != null and fileName != ''">and
                t.file_name like concat('%', #{fileName}, '%')
            </if>
            <if test="filePath != null and filePath != ''">
                and (<foreach collection="filePath.split(';')" item="item" separator="or">t.file_path like concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="creatorAccount != null and creatorAccount != ''">
                and t.creator_account = #{creatorAccount}
            </if>
            <if test="beginTime != null and beginTime!=''">
                and date_format(t.create_date,'%y%m%d') &gt;= date_format(#{beginTime},'%y%m%d')
            </if>
            <if test="endTime != null and endTime!=''">
                and date_format(t.create_date,'%y%m%d') &lt;= date_format(#{endTime},'%y%m%d')
            </if>
            <if test="dataSourceSys != null and dataSourceSys != ''">
                and t.data_source_sys = #{dataSourceSys}
            </if>
        </where>
    </select>

    <!--添加多个-->
    <insert id="inserts">
        insert into s_del_delivery_note_attachment
        <trim prefix="(" suffix=")" suffixOverrides=",">
            client_id,
            delivery_note_attachment_sid,
            delivery_note_sid,
            file_type,
            file_name,
            file_path,
            remark,
            creator_account,
            create_date,
            data_source_sys,
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <foreach collection="list" item="o" separator=",">
                #{clientId},
                #{deliveryNoteAttachmentSid},
                #{deliveryNoteSid},
                #{fileType},
                #{fileName},
                #{filePath},
                #{remark},
                #{creatorAccount},
                #{createDate},
                #{dataSourceSys},
            </foreach>
        </trim>
    </insert>

    <!--更新-->
    <update id="updateAllById">
        update s_del_delivery_note_attachment
        <trim prefix="SET" suffixOverrides=",">
            file_type = #{fileType},
            file_name = #{fileName},
            file_path = #{filePath},
            remark = #{remark},
            updater_account = #{updaterAccount},
            update_date = #{updateDate},
            data_source_sys = #{dataSourceSys},
        </trim>
        where delivery_note_attachment_sid = #{deliveryNoteAttachmentSid}
    </update>

    <!--更新多个-->
    <update id="updatesAllById">
        <foreach collection="list" item="o" separator=";">
            update s_del_delivery_note_attachment
            <trim prefix="SET" suffixOverrides=",">
                file_type = #{fileType},
                file_name = #{fileName},
                file_path = #{filePath},
                remark = #{remark},
                updater_account = #{updaterAccount},
                update_date = #{updateDate},
                data_source_sys = #{dataSourceSys},
            </trim>
            where delivery_note_attachment_sid = #{deliveryNoteAttachmentSid}
        </foreach>
    </update>

    <delete id="deleteDelDeliveryNoteAttachmentByIds" parameterType="long">
        delete from s_del_delivery_note_attachment where delivery_note_sid in
        <foreach item="deliveryNoteSid" collection="array" open="(" separator="," close=")">
            #{deliveryNoteSid}
        </foreach>
    </delete>
</mapper>
