<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.ems.plug.mapper.ConDocTypeSampleLendreturnMapper">

    <resultMap type="com.platform.ems.plug.domain.ConDocTypeSampleLendreturn" id="ConDocTypeSampleLendreturnResult">
                    <result property="clientId" column="client_id"/>
                    <result property="sid" column="sid"/>
                    <result property="code" column="code"/>
                    <result property="name" column="name"/>
                    <result property="remark" column="remark"/>
                    <result property="status" column="status"/>
                    <result property="handleStatus" column="handle_status"/>
                    <result property="creatorAccount" column="creator_account"/>
                    <result property="createDate" column="create_date"/>
                    <result property="updaterAccount" column="updater_account"/>
                    <result property="updateDate" column="update_date"/>
                    <result property="confirmerAccount" column="confirmer_account"/>
                    <result property="confirmDate" column="confirm_date"/>
                    <result property="dataSourceSys" column="data_source_sys"/>
                    <result property="isClientDefine" column="is_client_define"/>
                    <result property="sort" column="sort"/>
                <result property="creatorAccountName" column="creator_account_name"/>
        <result property="updaterAccountName" column="updater_account_name"/>
        <result property="confirmerAccountName" column="confirmer_account_name"/>
    </resultMap>

    <sql id="selectConDocTypeSampleLendreturnVo">
select t.client_id,
       t.sid, t.code,
       t.name,
       t.remark,
       t.status,
       t.handle_status,
       t.creator_account,
       t.create_date,
       t.updater_account,
       t.update_date,
       t.confirmer_account,
        t.confirm_date,
        t.data_source_sys,
        t.is_client_define,
        t.sort,
        t2.nick_name AS creator_account_name,
        t3.nick_name AS updater_account_name,
        t4.nick_name AS confirmer_account_name
        from s_con_doc_type_sample_lendreturn t
        LEFT JOIN sys_user t2 ON t2.user_name = t.creator_account
        LEFT JOIN sys_user t3 ON t3.user_name = t.updater_account
        LEFT JOIN sys_user t4 ON t4.user_name = t.confirmer_account
    </sql>

    <select id="selectConDocTypeSampleLendreturnById" parameterType="Long" resultMap="ConDocTypeSampleLendreturnResult">
        <include refid="selectConDocTypeSampleLendreturnVo"/>
        where t.sid = #{sid}
    </select>


    <select id="selectConDocTypeSampleLendreturnList" parameterType="com.platform.ems.plug.domain.ConDocTypeSampleLendreturn"
            resultMap="ConDocTypeSampleLendreturnResult">
        <include refid="selectConDocTypeSampleLendreturnVo"/>
        <where>
            <if test="status != null  and status != ''">
                and (<foreach collection="status.split(';')" item="item" separator="or">t.status like concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="handleStatus != null  and handleStatus != ''">
                and (<foreach collection="handleStatus.split(';')" item="item" separator="or">t.handle_status like
                concat('%',
                #{item}, '%')
            </foreach>)
            </if>
        </where>
    </select>


    <!--添加多个-->
    <insert id="inserts">
        insert into s_con_doc_type_sample_lendreturn
        <trim prefix="(" suffix=")" suffixOverrides=",">
                                                client_id,
                                                                sid,
                                                                code,
                                                                name,
                                                                remark,
                                                                status,
                                                                handle_status,
                                                                creator_account,
                                                                create_date,
                                                                updater_account,
                                                                update_date,
                                                                confirmer_account,
                                                                confirm_date,
                                                                data_source_sys,
                                                                is_client_define,
                                                                sort,
                                    </trim>
        values
        <foreach collection="list" item="item" separator=",">
            <trim prefix=" (" suffix=")" suffixOverrides=",">
                                                            #{item.clientId},
                                                                                                                    #{item.code},
                                                                                #{item.name},
                                                                                #{item.remark},
                                                                                #{item.status},
                                                                                #{item.handleStatus},
                                                                                #{item.creatorAccount},
                                                                                #{item.createDate},
                                                                                #{item.updaterAccount},
                                                                                #{item.updateDate},
                                                                                #{item.confirmerAccount},
                                                                                #{item.confirmDate},
                                                                                #{item.dataSourceSys},
                                                                                #{item.isClientDefine},
                                                                                #{item.sort},
                                                </trim>
        </foreach>
    </insert>

    <!--更新-->
    <update id="updateAllById">
        update s_con_doc_type_sample_lendreturn
        <trim prefix="SET" suffixOverrides=",">
                                                client_id = #{clientId},
                                                                sid = #{sid},
                                                                code = #{code},
                                                                name = #{name},
                                                                remark = #{remark},
                                                                status = #{status},
                                                                handle_status = #{handleStatus},
                                                                creator_account = #{creatorAccount},
                                                                create_date = #{createDate},
                                                                updater_account = #{updaterAccount},
                                                                update_date = #{updateDate},
                                                                confirmer_account = #{confirmerAccount},
                                                                confirm_date = #{confirmDate},
                                                                data_source_sys = #{dataSourceSys},
                                                                is_client_define = #{isClientDefine},
                                                                sort = #{sort},
                                    </trim>
        where sid = #{sid}
    </update>

    <!--更新多个-->
    <update id="updatesAllById">
        <foreach collection="list" item="o" separator=";">
            update s_con_doc_type_sample_lendreturn
