                update_date = #{updateDate},
                confirmer_account = #{confirmerAccount},
                confirm_date = #{confirmDate},
                data_source_sys = #{dataSourceSys},
                is_client_define = #{isClientDefine},
                sort = #{sort},
                is_reserve_stock = #{isReserveStock},
            </trim>
            where sid = #{sid}
        </foreach>
    </update>

    <select id="getList" parameterType="com.platform.ems.plug.domain.ConDocTypeDeliveryNote" resultType="com.platform.ems.plug.domain.ConDocTypeDeliveryNote">
        select sid,code,name,status,delivery_category,handle_status,create_date,is_reserve_stock,sort from s_con_doc_type_delivery_note
        <where>
            <if test="status != null and status != ''">
                and (<foreach collection="status.split(';')" item="item" separator="or">status = #{item}</foreach>)
            </if>
            <if test="handleStatus != null and handleStatus != ''">
                and (<foreach collection="handleStatus.split(';')" item="item" separator="or">handle_status = #{item}</foreach>)
            </if>
            <if test="deliveryCategory != null and deliveryCategory != ''">
                and delivery_category = #{deliveryCategory}
            </if>
            <if test="deliveryCategoryList != null and deliveryCategoryList.length > 0">
                and delivery_category in
                (<foreach collection="deliveryCategoryList" item="deliveryCategory" separator=",">#{deliveryCategory}</foreach>)
            </if>
            <if test="handleStatusList != null and handleStatusList.length > 0">
                and handle_status in
                (<foreach collection="handleStatusList" item="handleStatus" separator=",">#{handleStatus}</foreach>)
            </if>
        </where>
        order by sort asc, name asc
    </select>
</mapper>