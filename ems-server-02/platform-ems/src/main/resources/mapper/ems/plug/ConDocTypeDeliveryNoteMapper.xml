<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.ems.plug.mapper.ConDocTypeDeliveryNoteMapper">

    <resultMap type="com.platform.ems.plug.domain.ConDocTypeDeliveryNote" id="ConDocTypeDeliveryNoteResult">
        <result property="clientId" column="client_id"/>
        <result property="sid" column="sid"/>
        <result property="code" column="code"/>
        <result property="name" column="name"/>
        <result property="deliveryCategory" column="delivery_category"/>
        <result property="remark" column="remark"/>
        <result property="status" column="status"/>
        <result property="handleStatus" column="handle_status"/>
        <result property="creatorAccount" column="creator_account"/>
        <result property="createDate" column="create_date"/>
        <result property="updaterAccount" column="updater_account"/>
        <result property="updateDate" column="update_date"/>
        <result property="confirmerAccount" column="confirmer_account"/>
        <result property="confirmDate" column="confirm_date"/>
        <result property="dataSourceSys" column="data_source_sys"/>
        <result property="isClientDefine" column="is_client_define"/>
        <result property="sort" column="sort"/>
        <result property="isReserveStock" column="is_reserve_stock"/>
        <result property="deliveryCategoryName" column="delivery_category_name"/>
    </resultMap>

    <sql id="selectConDocTypeDeliveryNoteVo">
        select
        t.client_id,
        t.sid,
        t.code,
        t.name,
        t.delivery_category,
        t.remark,
        t.status,
        t.handle_status,
        t.creator_account,
        t.create_date,
        t.updater_account,
        t.update_date,
        t.confirmer_account,
        t.confirm_date,
        t.data_source_sys,
        t.is_client_define,
        t.sort,
        t.is_reserve_stock,
        t1.nick_name as creator_account_name,
        t2.name as delivery_category_name
  from s_con_doc_type_delivery_note t
        LEFT JOIN sys_user t1 ON t1.user_name = t.creator_account
        LEFT JOIN s_con_delivery_category t2 ON t.delivery_category = t2.code
    </sql>

    <select id="selectConDocTypeDeliveryNoteById" parameterType="Long" resultMap="ConDocTypeDeliveryNoteResult">
        <include refid="selectConDocTypeDeliveryNoteVo"/>
        where t.sid = #{sid}
    </select>


    <select id="selectConDocTypeDeliveryNoteList" parameterType="com.platform.ems.plug.domain.ConDocTypeDeliveryNote"
            resultMap="ConDocTypeDeliveryNoteResult">
        <include refid="selectConDocTypeDeliveryNoteVo"/>
        <where>
            <if test="clientId != null  and clientId != ''">
                and (<foreach collection="clientId.split(';')" item="item" separator="or">t.client_id like concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="sidList != null and sidList.length >0 ">
                and t.sid in
                (<foreach collection="sidList" item="item" separator=",">#{item}</foreach>)
            </if>
            <if test="sid != null">
                and t.sid= #{sid}
            </if>
            <if test="code != null  and code != ''">
                and (<foreach collection="code.split(';')" item="item" separator="or">t.code like concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="name != null  and name != ''">and
                t.name like concat('%', #{name}, '%')
            </if>
            <if test="deliveryCategory != null and deliveryCategory != ''">and
                t.delivery_category like concat('%', #{deliveryCategory}, '%')
            </if>
            <if test="deliveryCategoryList != null and deliveryCategoryList.length > 0">
                and t.delivery_category in
                (<foreach collection="deliveryCategoryList" item="deliveryCategory" separator=",">#{deliveryCategory}</foreach>)
            </if>
            <if test="handleStatusList != null and handleStatusList.length > 0">
                and t.handle_status in
                (<foreach collection="handleStatusList" item="handleStatus" separator=",">#{handleStatus}</foreach>)
            </if>
            <if test="status != null  and status != ''">
                and (<foreach collection="status.split(';')" item="item" separator="or">t.status like concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="handleStatus != null  and handleStatus != ''">
                and (<foreach collection="handleStatus.split(';')" item="item" separator="or">t.handle_status like
                concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="creatorAccount != null  and creatorAccount != ''">
                and (<foreach collection="creatorAccount.split(';')" item="item" separator="or">t1.nick_name like
                concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="beginTime != null and beginTime!=''">
                and date_format(t.create_date,'%y%m%d') &gt;= date_format(#{beginTime},'%y%m%d')
            </if>
            <if test="endTime != null and endTime!=''">
                and date_format(t.create_date,'%y%m%d') &lt;= date_format(#{endTime},'%y%m%d')
            </if>
            <if test="updaterAccount != null  and updaterAccount != ''">
                and (<foreach collection="updaterAccount.split(';')" item="item" separator="or">t.updater_account like
                concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="updateDate != null ">
                and t.update_date = #{updateDate}
            </if>
            <if test="confirmerAccount != null  and confirmerAccount != ''">
                and (<foreach collection="confirmerAccount.split(';')" item="item" separator="or">t.confirmer_account
                like concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="confirmDate != null ">
                and t.confirm_date = #{confirmDate}
            </if>
            <if test="dataSourceSys != null  and dataSourceSys != ''">
                and (<foreach collection="dataSourceSys.split(';')" item="item" separator="or">t.data_source_sys like
                concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="isClientDefine != null  and isClientDefine != ''">
                and (<foreach collection="isClientDefine.split(';')" item="item" separator="or">t.is_client_define like
                concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="sort != null ">
                and t.sort =#{sort}
            </if>
            <if test="isReserveStock != null  and isReserveStock != ''">
                and t.is_reserve_stock = #{isReserveStock}
            </if>
            <if test="params.dataScope != null and params.dataScope!=''">
                ${params.dataScope}
            </if>
        </where>
        order by t.sort asc, t.name asc
    </select>


    <!--添加多个-->
    <insert id="inserts">
        insert into s_con_doc_type_delivery_note
        <trim prefix="(" suffix=")" suffixOverrides=",">
            client_id,
            sid,
            code,
            name,
            delivery_category,
            remark,
            status,
            handle_status,
            creator_account,
            create_date,
            updater_account,
            update_date,
            confirmer_account,
            confirm_date,
            data_source_sys,
            is_client_define,
            sort,
            is_reserve_stock,
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <foreach collection="list" item="o" separator=",">
                #{clientId},
                #{sid},
                #{code},
                #{name},
                #{deliveryCategory},
                #{remark},
                #{status},
                #{handleStatus},
                #{creatorAccount},
                #{createDate},
                #{updaterAccount},
                #{updateDate},
                #{confirmerAccount},
                #{confirmDate},
                #{dataSourceSys},
                #{isClientDefine},
                #{sort},
                #{item.isReserveStock},
            </foreach>
        </trim>
    </insert>

