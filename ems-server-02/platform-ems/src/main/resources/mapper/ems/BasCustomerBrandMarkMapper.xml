<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.ems.mapper.BasCustomerBrandMarkMapper">

    <resultMap type="com.platform.ems.domain.BasCustomerBrandMark" id="BasCustomerBrandMarkResult">
        <result property="clientId" column="client_id"/>
        <result property="brandMarkSid" column="brand_mark_sid"/>
        <result property="customerSid" column="customer_sid"/>
        <result property="brandMarkCode" column="brand_mark_code"/>
        <result property="brandMarkName" column="brand_mark_name"/>
        <result property="remark" column="remark"/>
        <result property="status" column="status"/>
        <result property="creatorAccount" column="creator_account"/>
        <result property="creatorAccountName" column="creator_account_name"/>
        <result property="createDate" column="create_date"/>
        <result property="updaterAccount" column="updater_account"/>
        <result property="updateDate" column="update_date"/>
        <result property="dataSourceSys" column="data_source_sys"/>
    </resultMap>

    <sql id="selectBasCustomerBrandMarkVo">
        select t.client_id,
               t.brand_mark_sid,
               t.customer_sid,
               t.brand_mark_code,
               t.brand_mark_name,
               t.remark,
               t.status,
               t.creator_account,
               t2.nick_name AS creator_account_name,
               t.create_date,
               t.updater_account,
               t.update_date,
               t.data_source_sys
        from s_bas_customer_brand_mark t
        LEFT JOIN sys_user t2 on t.creator_account = t2.user_name
    </sql>

    <select id="selectBasCustomerBrandMarkById" parameterType="Long" resultMap="BasCustomerBrandMarkResult">
        <include refid="selectBasCustomerBrandMarkVo"/>
        where t.brand_mark_sid = #{brandMarkSid}
    </select>


    <select id="selectBasCustomerBrandMarkList" parameterType="com.platform.ems.domain.BasCustomerBrandMark"
            resultMap="BasCustomerBrandMarkResult">
        <include refid="selectBasCustomerBrandMarkVo"/>
        <where>
            <if test="clientId != null  and clientId != ''">
                and (<foreach collection="clientId.split(';')" item="item" separator="or">t.client_id like concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="brandMarkSid != null ">
                and t.brand_mark_sid =#{brandMarkSid}
            </if>
            <if test="customerSid != null ">
                and t.customer_sid =#{customerSid}
            </if>
            <if test="brandMarkCode != null  and brandMarkCode != ''">
                and (<foreach collection="brandMarkCode.split(';')" item="item" separator="or">t.brand_mark_code like
                concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="brandMarkName != null  and brandMarkName != ''">and
                t.brand_mark_name like concat('%', #{brandMarkName}, '%')
            </if>
            <if test="status != null ">
                and t.status =#{status}
            </if>
            <if test="creatorAccount != null  and creatorAccount != ''">
                and (<foreach collection="creatorAccount.split(';')" item="item" separator="or">t.creator_account like
                concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="beginTime != null and beginTime!=''">
                and date_format(t.create_date,'%y%m%d') &gt;= date_format(#{beginTime},'%y%m%d')
            </if>
            <if test="endTime != null and endTime!=''">
                and date_format(t.create_date,'%y%m%d') &lt;= date_format(#{endTime},'%y%m%d')
            </if>
            <if test="updaterAccount != null  and updaterAccount != ''">
                and (<foreach collection="updaterAccount.split(';')" item="item" separator="or">t.updater_account like
                concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="updateDate != null ">
                and t.update_date = #{updateDate}
            </if>
            <if test="dataSourceSys != null  and dataSourceSys != ''">
                and (<foreach collection="dataSourceSys.split(';')" item="item" separator="or">t.data_source_sys like
                concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="params.dataScope != null and params.dataScope!=''">
                ${params.dataScope}
            </if>
        </where>
    </select>


    <!--添加多个-->
    <insert id="inserts">
        insert into s_bas_customer_brand_mark
        <trim prefix="(" suffix=")" suffixOverrides=",">
            client_id,
            brand_mark_sid,
            customer_sid,
            brand_mark_code,
            brand_mark_name,
            remark,
            status,
            creator_account,
            create_date,
            updater_account,
            update_date,
            data_source_sys,
        </trim>
        values
        <foreach collection="list" item="item" separator=",">
            <trim prefix=" (" suffix=")" suffixOverrides=",">
                #{item.clientId},
                #{item.brandMarkSid},
                #{item.customerSid},
                #{item.brandMarkCode},
                #{item.brandMarkName},
                #{item.remark},
                #{item.status},
                #{item.creatorAccount},
                #{item.createDate},
                #{item.updaterAccount},
                #{item.updateDate},
                #{item.dataSourceSys},
            </trim>
        </foreach>
    </insert>

    <!--更新-->
    <update id="updateAllById">
        update s_bas_customer_brand_mark
        <trim prefix="SET" suffixOverrides=",">
            client_id = #{clientId},
            customer_sid = #{customerSid},
            brand_mark_code = #{brandMarkCode},
            brand_mark_name = #{brandMarkName},
            remark = #{remark},
            status = #{status},
            updater_account = #{updaterAccount},
            update_date = #{updateDate},
            data_source_sys = #{dataSourceSys},
        </trim>
        where brand_mark_sid = #{brandMarkSid}
    </update>

    <!--更新多个-->
    <update id="updatesAllById">
        <foreach collection="list" item="o" separator=";">
            update s_bas_customer_brand_mark
            <trim prefix="SET" suffixOverrides=",">
                client_id = #{clientId},
                customer_sid = #{customerSid},
                brand_mark_code = #{brandMarkCode},
                brand_mark_name = #{brandMarkName},
                remark = #{remark},
                status = #{status},
                updater_account = #{updaterAccount},
                update_date = #{updateDate},
                data_source_sys = #{dataSourceSys},
            </trim>
            where brand_mark_sid = #{brandMarkSid}
        </foreach>
    </update>

</mapper>