<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.ems.mapper.BasMaterialCertificateFieldValueMapper">

    <resultMap type="com.platform.ems.domain.BasMaterialCertificateFieldValue"
               id="BasMaterialCertificateFieldValueResult">
        <result property="clientId" column="client_id"/>
        <result property="materialCertificateFieldValueSid" column="material_certificate_field_value_sid"/>
        <result property="materialCertificateFieldSid" column="material_certificate_field_sid"/>
        <result property="materialSid" column="material_sid"/>
        <result property="companySid" column="company_sid"/>
        <result property="fieldName" column="field_name"/>
        <result property="fieldValue" column="field_value"/>
        <result property="isNullFlag" column="is_null_flag"/>
        <result property="isPrint" column="is_print"/>
        <result property="fieldDesc" column="field_desc"/>
        <result property="fieldType" column="field_type"/>
        <result property="fieldTextLength" column="field_text_length"/>
        <result property="fieldDecimalLength" column="field_decimal_length"/>
        <result property="remark" column="remark"/>
        <result property="creatorAccount" column="creator_account"/>
        <result property="createDate" column="create_date"/>
        <result property="updaterAccount" column="updater_account"/>
        <result property="updateDate" column="update_date"/>
        <result property="dataSourceSys" column="data_source_sys"/>
    </resultMap>

    <sql id="selectBasMaterialCertificateFieldValueVo">
        select t.client_id,
               t.material_certificate_field_value_sid,
               t.material_certificate_field_sid,
               t.material_sid,
               t.field_value,
               t.field_text_length,
               t.field_decimal_length,
               t.remark,
               t.creator_account,
               t.create_date,
               t.updater_account,
               t.update_date,
               t.data_source_sys,
               t.field_desc,
               t1.is_null_flag,
               t.is_print,
               t.field_name,
               t1.field_type
        from s_bas_material_certificate_field_value t
        LEFT JOIN s_bas_material_certificate_field t1 ON t1.material_certificate_field_sid = t.material_certificate_field_sid
    </sql>

    <select id="selectBasMaterialCertificateFieldValueById" parameterType="Long"
            resultMap="BasMaterialCertificateFieldValueResult">
        <include refid="selectBasMaterialCertificateFieldValueVo"/>
        where t.client_id = #{clientId}
    </select>


    <select id="selectBasMaterialCertificateFieldValueList"
            parameterType="com.platform.ems.domain.BasMaterialCertificateFieldValue"
            resultMap="BasMaterialCertificateFieldValueResult">
        <include refid="selectBasMaterialCertificateFieldValueVo"/>
        <where>
            <if test="materialCertificateFieldSid != null and materialCertificateFieldSid != ''">
                and t.material_certificate_field_sid = #{materialCertificateFieldSid}
            </if>
            <if test="materialSid != null and materialSid != ''">
                and t.material_sid = #{materialSid}
            </if>
            <if test="companySid != null">
                and t.company_sid = #{companySid}
            </if>
            <if test="fieldValue != null and fieldValue != ''">
                and t.field_value in (
                <foreach collection="fieldValue.split(';')" item="item" separator=",">
                    #{item}
                </foreach>)
            </if>
            <if test="creatorAccount != null and creatorAccount != ''">
                and t.creator_account in (
                <foreach collection="creatorAccount.split(';')" item="item" separator=",">
                    #{item}
                </foreach>)
            </if>
            <if test="createDate != null ">and t.create_date = #{createDate}</if>
            <if test="updaterAccount != null and updaterAccount != ''">
                and t.updater_account in (
                <foreach collection="updaterAccount.split(';')" item="item" separator=",">
                    #{item}
                </foreach>)
            </if>
            <if test="updateDate != null ">and t.update_date = #{updateDate}</if>
            <if test="dataSourceSys != null and dataSourceSys != ''">
                and t.data_source_sys = #{dataSourceSys}
            </if>
        </where>
    </select>

    <!--添加多个-->
    <insert id="inserts">
        insert into s_bas_material_certificate_field_value
        <trim prefix="(" suffix=")" suffixOverrides=",">
            client_id,
            material_certificate_field_sid,
            material_sid,
            company_sid,
            field_name,
            field_value,
            is_null_flag,
            is_print,
            field_desc,
            field_type,
            field_text_length,
            field_decimal_length,
            remark,
            creator_account,
            create_date,
            data_source_sys,
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <foreach collection="list" item="o" separator=",">
                #{clientId},
                #{materialCertificateFieldSid},
                #{materialSid},
                #{companySid},
                #{fieldName},
                #{fieldValue},
                #{isNullFlag},
                #{isPrint},
                #{fieldDesc},
                #{fieldType},
                #{fieldTextLength},
                #{fieldDecimalLength},
                #{remark},
                #{creatorAccount},
                #{createDate},
                #{dataSourceSys},
            </foreach>
        </trim>
    </insert>

    <!--更新-->
    <update id="updateAllById">
        update s_bas_material_certificate_field_value
        <trim prefix="SET" suffixOverrides=",">
            material_sid = #{materialSid},
            company_sid = #{companySid},
            field_name = #{fieldName},
            field_value = #{fieldValue},
            is_null_flag = #{isNullFlag},
            is_print = #{isPrint},
            field_desc = #{fieldDesc},
            field_type = #{fieldType},
            field_text_length = #{fieldTextLength},
            field_decimal_length = #{fieldDecimalLength},
            remark = #{remark},
            updater_account = #{updaterAccount},
            update_date = #{updateDate},
            data_source_sys = #{dataSourceSys},
        </trim>
        where material_certificate_field_value_sid = #{materialCertificateFieldValueSid}
    </update>

    <!--更新多个-->
    <update id="updatesAllById">
        <foreach collection="list" item="o" separator=";">
            update s_bas_material_certificate_field_value
            <trim prefix="SET" suffixOverrides=",">
                material_sid = #{materialSid},
                field_value = #{fieldValue},
                remark = #{remark},
                updater_account = #{updaterAccount},
                update_date = #{updateDate},
                data_source_sys = #{dataSourceSys},
            </trim>
            where client_id = #{clientId}
        </foreach>
    </update>

    <delete id="deleteMaterialCertificateFieldValueById" parameterType="Long">
        delete from s_bas_material_certificate_field_value
        where material_sid = #{materialSid}
    </delete>

    <delete id="deleteBasMaterialCertificateFieldValueByIds" parameterType="Long">
        delete from s_bas_material_certificate_field_value where material_sid in
        <foreach item="materialSid" collection="list" open="(" separator="," close=")">
            #{materialSid}
        </foreach>
    </delete>
</mapper>
