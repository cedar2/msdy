<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.ems.mapper.BasVendorRegisterCustomerMapper">

    <resultMap type="com.platform.ems.domain.BasVendorRegisterCustomer" id="BasVendorRegisterCustomerResult">
        <result property="clientId" column="client_id"/>
        <result property="vendorRegisterCustomerSid" column="vendor_register_customer_sid"/>
        <result property="vendorRegisterSid" column="vendor_register_sid"/>
        <result property="customerName" column="customer_name"/>
        <result property="saleClass" column="sale_class"/>
        <result property="businessScale" column="business_scale"/>
        <result property="cooperatMethod" column="cooperat_method"/>
        <result property="paymentMethod" column="payment_method"/>
        <result property="remark" column="remark"/>
        <result property="creatorAccount" column="creator_account"/>
        <result property="createDate" column="create_date"/>
        <result property="updaterAccount" column="updater_account"/>
        <result property="updateDate" column="update_date"/>
        <result property="dataSourceSys" column="data_source_sys"/>
        <result property="creatorAccountName" column="creator_account_name"/>
        <result property="updaterAccountName" column="updater_account_name"/>
    </resultMap>

    <sql id="selectBasVendorRegisterCustomerVo">
        select t.client_id,
               t.vendor_register_customer_sid,
               t.vendor_register_sid,
               t.customer_name,
               t.sale_class,
               t.business_scale,
               t.cooperat_method,
               t.payment_method,
               t.remark,
               t.creator_account,
               t.create_date,
               t.updater_account,
               t.update_date,
               t.data_source_sys,
               t2.nick_name AS creator_account_name,
               t3.nick_name AS updater_account_name
        from s_bas_vendor_register_customer t
                 LEFT JOIN sys_user t2 ON t2.user_name = t.creator_account
                 LEFT JOIN sys_user t3 ON t3.user_name = t.updater_account
    </sql>

    <select id="selectBasVendorRegisterCustomerById" parameterType="Long" resultMap="BasVendorRegisterCustomerResult">
        <include refid="selectBasVendorRegisterCustomerVo"/>
        where t.vendor_register_customer_sid = #{vendorRegisterCustomerSid}
    </select>


    <select id="selectBasVendorRegisterCustomerList" parameterType="com.platform.ems.domain.BasVendorRegisterCustomer"
            resultMap="BasVendorRegisterCustomerResult">
        <include refid="selectBasVendorRegisterCustomerVo"/>
        <where>
            <if test="clientId != null  and clientId != ''">
                and (<foreach collection="clientId.split(';')" item="item" separator="or">t.client_id
                like concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="vendorRegisterSid != null ">
                and t.vendor_register_sid =#{vendorRegisterSid}
            </if>
            <if test="customerName != null  and customerName != ''">and
                t.customer_name like concat('%', #{customerName}, '%')
            </if>
            <if test="saleClass != null  and saleClass != ''">
                and (<foreach collection="saleClass.split(';')" item="item" separator="or">t.sale_class
                like concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="businessScale != null ">
                and t.business_scale = #{businessScale}
            </if>
            <if test="cooperatMethod != null  and cooperatMethod != ''">
                and (<foreach collection="cooperatMethod.split(';')" item="item" separator="or">t.cooperat_method
                like concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="paymentMethod != null  and paymentMethod != ''">
                and (<foreach collection="paymentMethod.split(';')" item="item" separator="or">t.payment_method
                like concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="creatorAccount != null  and creatorAccount != ''">
                and (<foreach collection="creatorAccount.split(';')" item="item" separator="or">t.creator_account
                like concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="beginTime != null and beginTime!=''">
                and date_format(t.create_date,'%y%m%d') &gt;= date_format(#{beginTime},'%y%m%d')
            </if>
            <if test="endTime != null and endTime!=''">
                and date_format(t.create_date,'%y%m%d') &lt;= date_format(#{endTime},'%y%m%d')
            </if>
            <if test="updaterAccount != null  and updaterAccount != ''">
                and (<foreach collection="updaterAccount.split(';')" item="item" separator="or">t.updater_account
                like concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="updateDate != null ">
                and t.update_date = #{updateDate}
            </if>
            <if test="dataSourceSys != null  and dataSourceSys != ''">
                and (<foreach collection="dataSourceSys.split(';')" item="item" separator="or">t.data_source_sys
                like concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="params.dataScope != null and params.dataScope!=''">
                ${params.dataScope}
            </if>
        </where>
    </select>


    <!--添加多个-->
    <insert id="inserts">
        insert into s_bas_vendor_register_customer
        <trim prefix="(" suffix=")" suffixOverrides=",">
            client_id,
            vendor_register_customer_sid,
            vendor_register_sid,
            customer_name,
            sale_class,
            business_scale,
            cooperat_method,
            payment_method,
            remark,
            creator_account,
            create_date,
            updater_account,
            update_date,
            data_source_sys,
        </trim>
        values
        <foreach collection="list" item="item" separator=",">
            <trim prefix=" (" suffix=")" suffixOverrides=",">
                #{item.clientId},
                #{item.vendorRegisterCustomerSid},
                #{item.vendorRegisterSid},
                #{item.customerName},
                #{item.saleClass},
                #{item.businessScale},
                #{item.cooperatMethod},
                #{item.paymentMethod},
                #{item.remark},
                #{item.creatorAccount},
                #{item.createDate},
                #{item.updaterAccount},
                #{item.updateDate},
                #{item.dataSourceSys},
            </trim>
        </foreach>
    </insert>

    <!--更新-->
    <update id="updateAllById">
        update s_bas_vendor_register_customer
        <trim prefix="SET" suffixOverrides=",">
            vendor_register_sid = #{vendorRegisterSid},
            customer_name = #{customerName},
            sale_class = #{saleClass},
            business_scale = #{businessScale},
            cooperat_method = #{cooperatMethod},
            payment_method = #{paymentMethod},
            remark = #{remark},
            updater_account = #{updaterAccount},
            update_date = #{updateDate},
            data_source_sys = #{dataSourceSys},
        </trim>
        where vendor_register_customer_sid = #{vendorRegisterCustomerSid}
    </update>

    <!--更新多个-->
    <update id="updatesAllById">
        <foreach collection="list" item="o" separator=";">
            update s_bas_vendor_register_customer
            <trim prefix="SET" suffixOverrides=",">
                vendor_register_sid = #{vendorRegisterSid},
                customer_name = #{customerName},
                sale_class = #{saleClass},
                business_scale = #{businessScale},
                cooperat_method = #{cooperatMethod},
                payment_method = #{paymentMethod},
                remark = #{remark},
                updater_account = #{updaterAccount},
                update_date = #{updateDate},
                data_source_sys = #{dataSourceSys},
            </trim>
            where vendor_register_customer_sid = #{vendorRegisterCustomerSid}
        </foreach>
    </update>

</mapper>
