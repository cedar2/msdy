<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.ems.mapper.TecProductSizeZipperLengthMapper">

    <resultMap type="com.platform.ems.domain.TecProductSizeZipperLength" id="TecProductSizeZipperLengthResult">
                    <result property="clientId" column="client_id"/>
                    <result property="productZipperSid" column="product_zipper_sid"/>
                    <result property="zipperLengthSid" column="zipper_length_sid"/>
                    <result property="productSkuType" column="product_sku_type"/>
                    <result property="productSkuSid" column="product_sku_sid"/>
                    <result property="materialSkuType" column="material_sku_type"/>
                    <result property="materialSkuSid" column="material_sku_sid"/>
                    <result property="length" column="length"/>
                    <result property="unitLength" column="unit_length"/>
                    <result property="remark" column="remark"/>
                    <result property="handleStatus" column="handle_status"/>
                    <result property="creatorAccount" column="creator_account"/>
                    <result property="createDate" column="create_date"/>
                    <result property="updaterAccount" column="updater_account"/>
                    <result property="updateDate" column="update_date"/>
                    <result property="confirmerAccount" column="confirmer_account"/>
                    <result property="confirmDate" column="confirm_date"/>
                    <result property="dataSourceSys" column="data_source_sys"/>
            </resultMap>

    <sql id="selectTecProductSizeZipperLengthVo">
        select t.client_id, t.product_zipper_sid, t.zipper_length_sid, t.product_sku_type, t.product_sku_sid, t.material_sku_type, t.material_sku_sid, t.length, t.unit_length, t.remark, t.handle_status, t.creator_account, t.create_date, t.updater_account, t.update_date, t.confirmer_account, t.confirm_date, t.data_source_sys from s_tec_product_size_zipper_length t
    </sql>

    <select id="selectTecProductSizeZipperLengthById" parameterType="Long" resultMap="TecProductSizeZipperLengthResult">
        <include refid="selectTecProductSizeZipperLengthVo"/>
        where t.product_zipper_sid = #{productZipperSid}
    </select>

    <select id="getZipperSku2" parameterType="com.platform.ems.domain.TecBomItem" resultType="com.platform.ems.domain.BasSku">
        select
        t3.sku_name,
        t3.sku_sid
        from s_tec_product_size_zipper_length t
        left join s_tec_product_zipper t1 on t1.product_zipper_sid=t.product_zipper_sid
        left join s_bas_material t2 on t2.material_sid=t1.product_sid
        left join s_bas_sku t3 on t3.sku_sid=t.material_sku_sid
        where t.product_sku_sid=#{sku2Sid} and t1.material_sid=#{bomMaterialSid} and t2.material_code=#{saleMaterialCode}
    </select>
    <select id="getZipperEstSku2" parameterType="com.platform.ems.domain.dto.response.EstimateLineReportResponse" resultType="com.platform.ems.domain.BasSku">
        select
        t3.sku_name,
        t3.sku_sid
        from s_tec_product_size_zipper_length t
        left join s_tec_product_zipper t1 on t1.product_zipper_sid=t.product_zipper_sid
        left join s_bas_material t2 on t2.material_sid=t1.product_sid
        left join s_bas_sku t3 on t3.sku_sid=t.material_sku_sid
        where t.product_sku_sid=#{sku2Sid} and t1.material_sid=#{materialSid} and t2.material_code=#{saleMaterialCode}
    </select>


    <select id="selectTecProductSizeZipperLengthList" parameterType="com.platform.ems.domain.TecProductSizeZipperLength"
            resultMap="TecProductSizeZipperLengthResult">
        <include refid="selectTecProductSizeZipperLengthVo"/>
        <where>
                                                                                                    <if test="clientId != null  and clientId != ''">
                               and (<foreach collection="clientId.split(';')" item="item" separator="or"> t.client_id like concat('%',
                                    #{item}, '%')
                                </foreach>)
                            </if>
                                                                                                                                                                                            <if test="zipperLengthSid != null ">
                                and t.zipper_length_sid =#{zipperLengthSid}
                            </if>
                                                                                                                                                                <if test="productSkuType != null  and productSkuType != ''">
                               and (<foreach collection="productSkuType.split(';')" item="item" separator="or"> t.product_sku_type like concat('%',
                                    #{item}, '%')
                                </foreach>)
                            </if>
                                                                                                                                                                <if test="productSkuSid != null ">
                                and t.product_sku_sid =#{productSkuSid}
                            </if>
                                                                                                                                                                <if test="materialSkuType != null  and materialSkuType != ''">
                               and (<foreach collection="materialSkuType.split(';')" item="item" separator="or"> t.material_sku_type like concat('%',
                                    #{item}, '%')
                                </foreach>)
                            </if>
                                                                                                                                                                <if test="materialSkuSid != null ">
                                and t.material_sku_sid =#{materialSkuSid}
                            </if>
                                                                                                                                                                                                <if test="length != null ">
                                    and t.length = #{length}
                                </if>
                                                                                                                                                                                            <if test="unitLength != null  and unitLength != ''">
                               and (<foreach collection="unitLength.split(';')" item="item" separator="or"> t.unit_length like concat('%',
                                    #{item}, '%')
                                </foreach>)
                            </if>
                                                                                                                                                                                            <if test="handleStatus != null  and handleStatus != ''">
                               and (<foreach collection="handleStatus.split(';')" item="item" separator="or"> t.handle_status like concat('%',
                                    #{item}, '%')
                                </foreach>)
                            </if>
                                                                                                                                                                <if test="creatorAccount != null  and creatorAccount != ''">
                               and (<foreach collection="creatorAccount.split(';')" item="item" separator="or"> t.creator_account like concat('%',
                                    #{item}, '%')
                                </foreach>)
                            </if>
                                                                                                                                                                                                <if test="beginTime != null and beginTime!=''">
                                    and date_format(t.create_date,'%y%m%d') &gt;= date_format(#{beginTime},'%y%m%d')
                                </if>
                                <if test="endTime != null and endTime!=''">
                                    and date_format(t.create_date,'%y%m%d') &lt;= date_format(#{endTime},'%y%m%d')
                                </if>
                                                                                                                                                                                            <if test="updaterAccount != null  and updaterAccount != ''">
                               and (<foreach collection="updaterAccount.split(';')" item="item" separator="or"> t.updater_account like concat('%',
                                    #{item}, '%')
                                </foreach>)
                            </if>
                                                                                                                                                                                                <if test="updateDate != null ">
                                    and t.update_date = #{updateDate}
                                </if>
                                                                                                                                                                                            <if test="confirmerAccount != null  and confirmerAccount != ''">
                               and (<foreach collection="confirmerAccount.split(';')" item="item" separator="or"> t.confirmer_account like concat('%',
                                    #{item}, '%')
                                </foreach>)
                            </if>
                                                                                                                                                                                                <if test="confirmDate != null ">
                                    and t.confirm_date = #{confirmDate}
                                </if>
                                                                                                                                                                                            <if test="dataSourceSys != null  and dataSourceSys != ''">
                               and (<foreach collection="dataSourceSys.split(';')" item="item" separator="or"> t.data_source_sys like concat('%',
                                    #{item}, '%')
                                </foreach>)
                            </if>
                                                                                    <if test="params.dataScope != null and params.dataScope!=''">
                ${params.dataScope}
            </if>
        </where>
    </select>


    <!--添加多个-->
    <insert id="inserts">
        insert into s_tec_product_size_zipper_length
        <trim prefix="(" suffix=")" suffixOverrides=",">
                                                                client_id,
                                                                product_zipper_sid,
                                                                zipper_length_sid,
                                                                product_sku_type,
                                                                product_sku_sid,
                                                                material_sku_type,
                                                                material_sku_sid,
                                                                length,
                                                                unit_length,
                                                                remark,
                                                                handle_status,
                                                                creator_account,
                                                                create_date,
                                                                updater_account,
                                                                update_date,
                                                                confirmer_account,
                                                                confirm_date,
                                                                data_source_sys,
                                    </trim>
        values
            <foreach collection="list" item="item" separator=",">
                <trim prefix=" (" suffix=")" suffixOverrides=",">
                                                                                #{item.clientId},
                                                                                #{item.productZipperSid},
                                                                                #{item.zipperLengthSid},
                                                                                #{item.productSkuType},
                                                                                #{item.productSkuSid},
                                                                                #{item.materialSkuType},
                                                                                #{item.materialSkuSid},
                                                                                #{item.length},
                                                                                #{item.unitLength},
                                                                                #{item.remark},
                                                                                #{item.handleStatus},
                                                                                #{item.creatorAccount},
                                                                                #{item.createDate},
                                                                                #{item.updaterAccount},
                                                                                #{item.updateDate},
                                                                                #{item.confirmerAccount},
                                                                                #{item.confirmDate},
                                                                                #{item.dataSourceSys},
                                                    </trim>
            </foreach>
    </insert>

