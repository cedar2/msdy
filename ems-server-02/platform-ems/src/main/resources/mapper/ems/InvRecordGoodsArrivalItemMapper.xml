       t.data_source_sys ,
       t2.nick_name AS creator_account_name,
       t5.material_code,
       t5.material_name,
       t6.sku_name AS sku1_name,
       t6.sku_code AS sku1_code,
       t7.sku_name AS sku2_name,
       t7.sku_code as sku2_code,
       t8.name as unit_base_name,
       t9.name as unit_price_name,
       t10.barcode,
       t12.nick_name as buyer_name,
       t13.company_name,
       t14.product_season_name,
       t15.vendor_name,
       t16.goods_arrival_code,
       t16.carrier,
       t16.carrier_name,
       t16.carrier_note_code,
       t16.arrival_date,
       t16.supplier_delivery_code
       from s_inv_record_goods_arrival_item t
        LEFT JOIN sys_user t2 ON t2.user_name = t.creator_account
        LEFT JOIN s_bas_material t5 ON t5.material_sid = t.material_sid
        LEFT JOIN s_bas_sku t6 ON t6.sku_sid = t.sku1_sid
        LEFT JOIN s_bas_sku t7 ON t7.sku_sid = t.sku2_sid
        LEFT JOIN s_con_measure_unit t8 ON t8.code = t.unit_base
        LEFT JOIN s_con_measure_unit t9 ON t9.code = t.unit_price
        LEFT JOIN s_bas_material_barcode t10 ON t10.barcode_sid = t.barcode_sid
        left join s_pur_purchase_order t11 on t11.purchase_order_sid=t.purchase_order_sid
        left join sys_user t12 on  t12.user_name = t11.buyer
        LEFT JOIN s_bas_company t13 ON t13.company_sid = t11.company_sid
        LEFT JOIN s_bas_product_season t14 ON t14.product_season_sid = t11.product_season_sid
        LEFT JOIN s_bas_vendor t15 ON t15.vendor_sid = t11.vendor_sid
        left join s_inv_record_goods_arrival t16 on t16.goods_arrival_sid=t.goods_arrival_sid
    </sql>
    <select id="getReport" parameterType="com.platform.ems.domain.dto.request.InvRecordGoodsArrivalRequest"
            resultType="com.platform.ems.domain.dto.response.InvRecordGoodsArrivalResponse">
        <include refid="reportVo"/>
        <where>
            <where>
                <if test="goodsArrivalCode != null and goodsArrivalCode !=''" >
                    and t16.goods_arrival_code like concat('%',#{goodsArrivalCode}, '%')
                </if>
                <if test="checkStatusList != null and checkStatusList.length >0 ">
                    and t.check_status in
                    (<foreach collection="checkStatusList" item="item" separator=",">#{item}</foreach>)
                </if>
                <if test="checkResultList != null and checkResultList.length >0 ">
                    and t.check_result in
                    (<foreach collection="checkResultList" item="item" separator=",">#{item}</foreach>)
                </if>
                <if test="productSeasonSidList != null and productSeasonSidList.length >0 ">
                    and t11.product_season_sid in
                    (<foreach collection="productSeasonSidList" item="productSeasonSid" separator=",">#{productSeasonSid}</foreach>)
                </if>
                <if test="materialCode != null and materialCode !=''" >
                    and t5.material_code like concat('%',#{materialCode}, '%')
                </if>
                <if test="materialName != null and materialName !=''" >
                    and t5.material_name like concat('%',#{materialName}, '%')
                </if>
                <if test="goodsArrivalCode != null and goodsArrivalCode !=''" >
                    and t16.goods_arrival_code like concat('%',#{goodsArrivalCode}, '%')
                </if>
                <if test="productSeasonSidList != null and productSeasonSidList.length >0 ">
                    and t11.product_season_sid in
                    (<foreach collection="productSeasonSidList" item="productSeasonSid" separator=",">#{productSeasonSid}</foreach>)
                </if>
                <if test="companySidList != null and companySidList.length >0 ">
                    and t11.company_sid in
                    (<foreach collection="companySidList" item="companySid" separator=",">#{companySid}</foreach>)
                </if>
                <if test="vendorSidList != null and vendorSidList.length >0 ">
                    and t11.vendor_sid in
                    (<foreach collection="vendorSidList" item="vendorSid" separator=",">#{vendorSid}</foreach>)
                </if>
                <if test="purchaseOrderCode != null">
                    and t11.purchase_order_code like concat('%',#{purchaseOrderCode}, '%')
                </if>
                <if test="buyerList != null and buyerList.length >0 ">
                    and t11.buyer in
                    (<foreach collection="buyerList" item="item" separator=",">#{item}</foreach>)
                </if>
                <if test="handleStatusList != null and handleStatusList.length >0 ">
                    and t16.handle_status in
                    (<foreach collection="handleStatusList" item="handleStatus" separator=",">#{handleStatus}</foreach>)
                </if>
                <if test="creatorAccountList != null and creatorAccountList.length >0 ">
                    and t.creator_account in
                    (<foreach collection="creatorAccountList" item="item" separator=",">#{item}</foreach>)
                </if>
                <if test="beginTime != null">
                    and date_format(t.create_date,'%y%m%d') &gt;= date_format(#{beginTime},'%y%m%d')
                </if>
                <if test="endTime != null">
                    and date_format(t.create_date,'%y%m%d') &lt;=date_format(#{endTime},'%y%m%d')
                </if>
                <if test="arrivalDateStart != null">
                    and date_format(t16.arrival_date,'%y%m%d') &gt;= date_format(#{arrivalDateStart},'%y%m%d')
                </if>
                <if test="arrivalDateEnd != null">
                    and date_format(t16.arrival_date,'%y%m%d') &lt;=date_format(#{arrivalDateEnd},'%y%m%d')
                </if>
            </where>
        </where>
    </select>


    <select id="selectInvRecordGoodsArrivalItemById" parameterType="Long" resultMap="InvRecordGoodsArrivalItemResult">
