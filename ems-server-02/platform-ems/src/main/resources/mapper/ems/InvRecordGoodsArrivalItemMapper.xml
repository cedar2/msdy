    <sql id="selectInvRecordGoodsArrivalItemVo">
select t.client_id, t.goods_arrival_item_sid,
       t.goods_arrival_sid,
       t.material_sid,
       t.sku1_sid,
       t.sku2_sid,
       t.barcode_sid,
       t.arrival_quantity,
       t.unit_price,
       t.unit_base,
       t.unit_conversion_rate,
       t.check_status,
       t.check_document_code,
       t.check_result,
       t.vendor_contact_status,
       t.vendor_pickup_status,
       t.item_num,
       t.purchase_order_sid,
       t.purchase_order_code,
       t.company_sid,
       t.purchase_order_item_sid,
       t.purchase_order_item_num,
       t.remark,
       t.creator_account,
       t.create_date,
       t.updater_account,
       t.update_date,
       t.confirmer_account,
       t.confirm_date,
       t.data_source_sys ,
       t2.nick_name AS creator_account_name,
       t3.nick_name AS updater_account_name,
       t4.nick_name AS confirmer_account_name,
       t5.material_code,
       t5.material_name,
       t6.sku_name AS sku1_name,
       t6.sku_code AS sku1_code,
       t7.sku_name AS sku2_name,
       t7.sku_code as sku2_code,
       t8.name as unit_base_name,
       t9.name as unit_price_name,
       t10.barcode,
       t12.nick_name as buyer_name,
       t13.company_name,
       t14.product_season_name,
       t15.vendor_name,
       t16.quantity,
       t17.name as material_type_name
       from s_inv_record_goods_arrival_item t
        LEFT JOIN sys_user t2 ON t2.user_name = t.creator_account
        LEFT JOIN sys_user t3 ON t3.user_name = t.updater_account
        LEFT JOIN sys_user t4 ON t4.user_name = t.confirmer_account
        LEFT JOIN s_bas_material t5 ON t5.material_sid = t.material_sid
        LEFT JOIN s_bas_sku t6 ON t6.sku_sid = t.sku1_sid
        LEFT JOIN s_bas_sku t7 ON t7.sku_sid = t.sku2_sid
        LEFT JOIN s_con_measure_unit t8 ON t8.code = t.unit_base
        LEFT JOIN s_con_measure_unit t9 ON t9.code = t.unit_price
        LEFT JOIN s_bas_material_barcode t10 ON t10.barcode_sid = t.barcode_sid
        left join s_pur_purchase_order t11 on t11.purchase_order_sid=t.purchase_order_sid
        left join sys_user t12 on  t12.user_name = t11.buyer
        LEFT JOIN s_bas_company t13 ON t13.company_sid = t11.company_sid
        LEFT JOIN s_bas_product_season t14 ON t14.product_season_sid = t11.product_season_sid
        LEFT JOIN s_bas_vendor t15 ON t15.vendor_sid = t11.vendor_sid
        left join s_pur_purchase_order_item t16 on t16.purchase_order_item_sid=t.purchase_order_item_sid
        left join s_con_material_type t17 on t17.code = t5.material_type
    </sql>
