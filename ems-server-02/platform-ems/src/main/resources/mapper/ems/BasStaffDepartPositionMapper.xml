<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.ems.mapper.BasStaffDepartPositionMapper">
    
    <resultMap type="com.platform.ems.domain.BasStaffDepartPosition" id="BasStaffDepartPositionResult">
        <result property="clientId"    column="client_id"    />
        <result property="staffDepartmentPSid"    column="staff_department_p_sid"    />
        <result property="organizationNodeSid"    column="organization_node_sid"    />
        <result property="isDefaultPosition"    column="is_default_position"    />
        <result property="positionName"    column="position_name"    />
        <result property="positionDuty"    column="position_duty"    />
        <result property="remark"    column="remark"    />
        <result property="creatorAccount"    column="creator_account"    />
        <result property="createDate"    column="create_date"    />
        <result property="updaterAccount"    column="updater_account"    />
        <result property="updateDate"    column="update_date"    />
        <result property="dataSourceSys"    column="data_source_sys"    />
    </resultMap>

    <sql id="selectBasStaffDepartPositionVo">
        select t.client_id, t.staff_department_p_sid, t.organization_node_sid, t.is_default_position, t.position_name, t.position_duty, t.remark, t.creator_account, t.create_date, t.updater_account, t.update_date, t.data_source_sys from s_bas_staff_depart_position t
    </sql>

    <select id="selectBasStaffDepartPositionById" parameterType="String" resultMap="BasStaffDepartPositionResult">
        <include refid="selectBasStaffDepartPositionVo"/>
        where t.staff_department_p_sid = #{staffDepartmentPSid}
    </select>


    <select id="selectBasStaffDepartPositionList" parameterType="com.platform.ems.domain.BasStaffDepartPosition" resultMap="BasStaffDepartPositionResult">
        <include refid="selectBasStaffDepartPositionVo"/>
        <where>
                                                        <if test="staffDepartmentPSid != null "> and t.staff_department_p_sid = #{staffDepartmentPSid}</if>
                                                                                <if test="isDefaultPosition != null  and isDefaultPosition != ''">
        and  t.is_default_position in (
        <foreach collection="isDefaultPosition.split(';')" item="item" separator=",">
        #{item}
        </foreach>
        )
        </if>
                                                        <if test="positionName != null  and positionName != ''"> and t.position_name like concat('%', #{positionName}, '%')</if>
                                                        <if test="positionDuty != null  and positionDuty != ''">
        and  t.position_duty in (
        <foreach collection="positionDuty.split(';')" item="item" separator=",">
        #{item}
        </foreach>
        )
        </if>
                                                                                <if test="creatorAccount != null  and creatorAccount != ''">
        and  t.creator_account in (
        <foreach collection="creatorAccount.split(';')" item="item" separator=",">
        #{item}
        </foreach>
        )
        </if>
                                                                <if test="createDate != null "> and t.create_date = #{createDate}</if>
                                                                <if test="updaterAccount != null  and updaterAccount != ''">
        and  t.updater_account in (
        <foreach collection="updaterAccount.split(';')" item="item" separator=",">
        #{item}
        </foreach>
        )
        </if>
                                                                <if test="updateDate != null "> and t.update_date = #{updateDate}</if>
                                                                <if test="dataSourceSys != null  and dataSourceSys != ''">
        and  t.data_source_sys in (
        <foreach collection="dataSourceSys.split(';')" item="item" separator=",">
        #{item}
        </foreach>
        )
        </if>
                                        </where>
    </select>


    <!--添加多个-->
    <insert id="inserts">
        insert into s_bas_staff_depart_position
        <trim prefix="(" suffix=")" suffixOverrides=",">
                        client_id,
                                staff_department_p_sid,
                                organization_node_sid,
                                is_default_position,
                                position_name,
                                position_duty,
                                remark,
                                creator_account,
                                create_date,
                                updater_account,
                                update_date,
                                data_source_sys,
                        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
        <foreach collection="list" item="o" separator=",">
                        #{clientId},
                                #{staffDepartmentPSid},
                                #{organizationNodeSid},
                                #{isDefaultPosition},
                                #{positionName},
                                #{positionDuty},
                                #{remark},
                                #{creatorAccount},
                                #{createDate},
                                #{updaterAccount},
                                #{updateDate},
                                #{dataSourceSys},
                        </foreach>
        </trim>
    </insert>

    <!--更新-->
    <update id="updateAllById">
        update s_bas_staff_depart_position
        <trim prefix="SET" suffixOverrides=",">
                                        staff_department_p_sid = #{staffDepartmentPSid},
                                organization_node_sid = #{organizationNodeSid},
                                is_default_position = #{isDefaultPosition},
                                position_name = #{positionName},
                                position_duty = #{positionDuty},
                                remark = #{remark},
                                creator_account = #{creatorAccount},
                                create_date = #{createDate},
                                updater_account = #{updaterAccount},
                                update_date = #{updateDate},
                                data_source_sys = #{dataSourceSys},
                        </trim>
        where client_id = #{clientId}
    </update>

    <!--更新多个-->
    <update id="updatesAllById">
        <foreach collection="list" item="o" separator=";">
        update s_bas_staff_depart_position
        <trim prefix="SET" suffixOverrides=",">
                                        staff_department_p_sid = #{staffDepartmentPSid},
                                organization_node_sid = #{organizationNodeSid},
                                is_default_position = #{isDefaultPosition},
                                position_name = #{positionName},
                                position_duty = #{positionDuty},
                                remark = #{remark},
                                creator_account = #{creatorAccount},
                                create_date = #{createDate},
                                updater_account = #{updaterAccount},
                                update_date = #{updateDate},
                                data_source_sys = #{dataSourceSys},
                        </trim>
        where client_id = #{clientId}
        </foreach>
    </update>

</mapper>