<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.ems.mapper.BasVendorProductivityMapper">

    <resultMap type="com.platform.ems.domain.BasVendorProductivity" id="BasVendorProductivityResult">
        <result property="clientId" column="client_id"/>
        <result property="vendorProductivitySid" column="vendor_productivity_sid"/>
        <result property="vendorSid" column="vendor_sid"/>
        <result property="teamName" column="team_name"/>
        <result property="productCategory" column="product_category"/>
        <result property="workerNumber" column="worker_number"/>
        <result property="perdayOutput" column="perday_output"/>
        <result property="name" column="name"/>
        <result property="position" column="position"/>
        <result property="phone" column="phone"/>
        <result property="email" column="email"/>
        <result property="surplusCapacityD" column="surplus_capacity_d"/>
        <result property="address" column="address"/>
        <result property="remark" column="remark"/>
        <result property="creatorAccount" column="creator_account"/>
        <result property="createDate" column="create_date"/>
        <result property="updaterAccount" column="updater_account"/>
        <result property="updateDate" column="update_date"/>
        <result property="dataSourceSys" column="data_source_sys"/>
        <result property="creatorAccountName" column="creator_account_name"/>
        <result property="updaterAccountName" column="updater_account_name"/>
    </resultMap>

    <sql id="selectBasVendorProductivityVo">
        select t.client_id,
               t.vendor_productivity_sid,
               t.vendor_sid,
               t.team_name,
               t.product_category,
               t.worker_number,
               t.perday_output,
               t.name,
               t.position,
               t.phone,
               t.email,
               t.surplus_capacity_d,
               t.address,
               t.remark,
               t.creator_account,
               t.create_date,
               t.updater_account,
               t.update_date,
               t.data_source_sys,
               t2.nick_name AS creator_account_name,
               t3.nick_name AS updater_account_name
        from s_bas_vendor_productivity t
         left join sys_user t2 on t.creator_account = t2.user_name
         left join sys_user t3 on t.updater_account = t3.user_name
    </sql>

    <select id="selectBasVendorProductivityById" parameterType="Long" resultMap="BasVendorProductivityResult">
        <include refid="selectBasVendorProductivityVo"/>
        where t.vendor_productivity_sid = #{vendorProductivitySid}
    </select>


    <select id="selectBasVendorProductivityList" parameterType="com.platform.ems.domain.BasVendorProductivity"
            resultMap="BasVendorProductivityResult">
        <include refid="selectBasVendorProductivityVo"/>
        <where>
            <if test="clientId != null  and clientId != ''">
                and (<foreach collection="clientId.split(';')" item="item" separator="or">t.client_id like concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="vendorSid != null ">
                and t.vendor_sid =#{vendorSid}
            </if>
            <if test="teamName != null  and teamName != ''">and
                t.team_name like concat('%', #{teamName}, '%')
            </if>
            <if test="productCategory != null  and productCategory != ''">
                and (<foreach collection="productCategory.split(';')" item="item" separator="or">t.product_category like
                concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="workerNumber != null ">
                and t.worker_number =#{workerNumber}
            </if>
            <if test="perdayOutput != null ">
                and t.perday_output =#{perdayOutput}
            </if>
            <if test="name != null  and name != ''">and
                t.name like concat('%', #{name}, '%')
            </if>
            <if test="position != null  and position != ''">
                and (<foreach collection="position.split(';')" item="item" separator="or">t.position like concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="phone != null  and phone != ''">
                and (<foreach collection="phone.split(';')" item="item" separator="or">t.phone like concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="email != null  and email != ''">
                and (<foreach collection="email.split(';')" item="item" separator="or">t.email like concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="surplusCapacityD != null  and surplusCapacityD != ''">
                and (<foreach collection="surplusCapacityD.split(';')" item="item" separator="or">t.surplus_capacity_d
                like concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="address != null  and address != ''">
                and (<foreach collection="address.split(';')" item="item" separator="or">t.address like concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="creatorAccount != null  and creatorAccount != ''">
                and (<foreach collection="creatorAccount.split(';')" item="item" separator="or">t.creator_account like
                concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="beginTime != null and beginTime!=''">
                and date_format(t.create_date,'%y%m%d') &gt;= date_format(#{beginTime},'%y%m%d')
            </if>
            <if test="endTime != null and endTime!=''">
                and date_format(t.create_date,'%y%m%d') &lt;= date_format(#{endTime},'%y%m%d')
            </if>
            <if test="updaterAccount != null  and updaterAccount != ''">
                and (<foreach collection="updaterAccount.split(';')" item="item" separator="or">t.updater_account like
                concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="updateDate != null ">
                and t.update_date = #{updateDate}
            </if>
            <if test="dataSourceSys != null  and dataSourceSys != ''">
                and (<foreach collection="dataSourceSys.split(';')" item="item" separator="or">t.data_source_sys like
                concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="params.dataScope != null and params.dataScope!=''">
                ${params.dataScope}
            </if>
        </where>
    </select>


    <!--添加多个-->
    <insert id="inserts">
        insert into s_bas_vendor_productivity
        <trim prefix="(" suffix=")" suffixOverrides=",">
            client_id,
            vendor_productivity_sid,
            vendor_sid,
            team_name,
            product_category,
            worker_number,
            perday_output,
            name,
            position,
            phone,
            email,
            surplus_capacity_d,
            address,
            remark,
            creator_account,
            create_date,
            updater_account,
            update_date,
            data_source_sys,
        </trim>
        values
        <foreach collection="list" item="item" separator=",">
            <trim prefix=" (" suffix=")" suffixOverrides=",">
                #{item.clientId},
                #{item.vendorProductivitySid},
                #{item.vendorSid},
                #{item.teamName},
                #{item.productCategory},
                #{item.workerNumber},
                #{item.perdayOutput},
                #{item.name},
                #{item.position},
                #{item.phone},
                #{item.email},
                #{item.surplusCapacityD},
                #{item.address},
                #{item.remark},
                #{item.creatorAccount},
                #{item.createDate},
                #{item.updaterAccount},
                #{item.updateDate},
                #{item.dataSourceSys},
            </trim>
        </foreach>
    </insert>

    <!--更新-->
    <update id="updateAllById">
        update s_bas_vendor_productivity
        <trim prefix="SET" suffixOverrides=",">
            client_id = #{clientId},
            vendor_sid = #{vendorSid},
            team_name = #{teamName},
            product_category = #{productCategory},
            worker_number = #{workerNumber},
            perday_output = #{perdayOutput},
            name = #{name},
            position = #{position},
            phone = #{phone},
            email = #{email},
            surplus_capacity_d = #{surplusCapacityD},
            address = #{address},
            remark = #{remark},
            updater_account = #{updaterAccount},
            update_date = #{updateDate},
            data_source_sys = #{dataSourceSys},
        </trim>
        where vendor_productivity_sid = #{vendorProductivitySid}
    </update>

    <!--更新多个-->
    <update id="updatesAllById">
        <foreach collection="list" item="o" separator=";">
            update s_bas_vendor_productivity
            <trim prefix="SET" suffixOverrides=",">
                client_id = #{clientId},
                vendor_sid = #{vendorSid},
                team_name = #{teamName},
                product_category = #{productCategory},
                worker_number = #{workerNumber},
                perday_output = #{perdayOutput},
                name = #{name},
                position = #{position},
                phone = #{phone},
                email = #{email},
                surplus_capacity_d = #{surplusCapacityD},
                address = #{address},
                remark = #{remark},
                updater_account = #{updaterAccount},
                update_date = #{updateDate},
                data_source_sys = #{dataSourceSys},
            </trim>
            where vendor_productivity_sid = #{vendorProductivitySid}
        </foreach>
    </update>

</mapper>
