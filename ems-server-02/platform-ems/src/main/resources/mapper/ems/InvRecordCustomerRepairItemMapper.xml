                                                                customer_repair_item_sid = #{customerRepairItemSid},
                                                                customer_repair_sid = #{customerRepairSid},
                                                                material_sid = #{materialSid},
                                                                sku1_sid = #{sku1Sid},
                                                                sku2_sid = #{sku2Sid},
                                                                barcode_sid = #{barcodeSid},
                                                                unit_base = #{unitBase},
                                                                repair_quantity = #{repairQuantity},
                                                                return_quantity = #{returnQuantity},
                                                                plan_return_date = #{planReturnDate},
                                                                return_status = #{returnStatus},
                                                                item_num = #{itemNum},
                                                                remark = #{remark},
                                                                creator_account = #{creatorAccount},
                                                                create_date = #{createDate},
                                                                updater_account = #{updaterAccount},
                                                                update_date = #{updateDate},
                                                                data_source_sys = #{dataSourceSys},
                                    </trim>
        where customer_repair_item_sid = #{customerRepairItemSid}
    </update>

