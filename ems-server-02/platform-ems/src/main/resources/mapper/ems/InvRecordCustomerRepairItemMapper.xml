<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.ems.mapper.InvRecordCustomerRepairItemMapper">

    <resultMap type="com.platform.ems.domain.InvRecordCustomerRepairItem" id="InvRecordCustomerRepairItemResult">
                    <result property="clientId" column="client_id"/>
                    <result property="customerRepairItemSid" column="customer_repair_item_sid"/>
                    <result property="customerRepairSid" column="customer_repair_sid"/>
                    <result property="materialSid" column="material_sid"/>
                    <result property="sku1Sid" column="sku1_sid"/>
                    <result property="sku2Sid" column="sku2_sid"/>
                    <result property="barcodeSid" column="barcode_sid"/>
                    <result property="unitBase" column="unit_base"/>
                    <result property="repairQuantity" column="repair_quantity"/>
                    <result property="returnQuantity" column="return_quantity"/>
                    <result property="planReturnDate" column="plan_return_date"/>
                    <result property="returnStatus" column="return_status"/>
                    <result property="itemNum" column="item_num"/>
                    <result property="remark" column="remark"/>
                    <result property="creatorAccount" column="creator_account"/>
                    <result property="createDate" column="create_date"/>
                    <result property="updaterAccount" column="updater_account"/>
                    <result property="updateDate" column="update_date"/>
                    <result property="dataSourceSys" column="data_source_sys"/>
            </resultMap>

    <sql id="selectInvRecordCustomerRepairItemVo">
        select t.client_id,
        t.customer_repair_item_sid,
        t.customer_repair_sid,
        t.material_sid,
        t.sku1_sid,
        t.sku2_sid,
        t.barcode_sid,
        t.unit_base,
        t.repair_quantity,
        t.return_quantity,
        t.plan_return_date,
        t.return_status,
        t.item_num,
        t.remark,
        t.creator_account,
        t.create_date,
        t.updater_account,
        t.update_date,
        t.data_source_sys,
        t1.material_name,
        t1.material_code,
        t2.sku_code AS sku1_code,
        t2.sku_name AS sku1_name,
        t3.sku_code AS sku2_code,
        t3.sku_name AS sku2_name,
        t4.nick_name as creator_account_name,
        t6.name as unit_base_name,
        t7.barcode
        from s_inv_record_customer_repair_item t
        LEFT JOIN s_bas_material t1 ON t1.material_sid = t.material_sid
        LEFT JOIN s_bas_sku t2 ON t2.sku_sid = t.sku1_sid
        LEFT JOIN s_bas_sku t3 ON t3.sku_sid = t.sku2_sid
        LEFT JOIN sys_user t4 ON t4.user_name = t.creator_account
        left join s_con_measure_unit t6 on t6.code=t.unit_base
        left join s_bas_material_barcode t7 on t7.barcode_sid=t.barcode_sid
    </sql>
    <sql id="selectReportVo">
        select t.client_id,
        t.customer_repair_item_sid,
        t.customer_repair_sid,
        t.material_sid,
        t.sku1_sid,
        t.sku2_sid,
        t.barcode_sid,
        t.unit_base,
        t.repair_quantity,
        t.return_quantity,
        t.plan_return_date,
        t.return_status,
        t.item_num,
        t.remark,
        t.creator_account,
        t.create_date,
        t.updater_account,
        t8.update_date,
        t.data_source_sys,
        t1.material_name,
        t1.material_code,
        t2.sku_code AS sku1_code,
        t2.sku_name AS sku1_name,
        t3.sku_code AS sku2_code,
        t3.sku_name AS sku2_name,
        t4.nick_name as creator_account_name,
        t6.name as unit_base_name,
        t7.barcode,
        t9.company_name,
        t8.confirm_date,
        t10.customer_name,
        t8.handle_status,
        t8.customer_repair_code,
        t8.customer_repair_sid,
        t11.nick_name as updater_account_name,
        t12.nick_name as confirmer_account_name
        from s_inv_record_customer_repair_item t
        LEFT JOIN s_bas_material t1 ON t1.material_sid = t.material_sid
        LEFT JOIN s_bas_sku t2 ON t2.sku_sid = t.sku1_sid
        LEFT JOIN s_bas_sku t3 ON t3.sku_sid = t.sku2_sid
        LEFT JOIN sys_user t4 ON t4.user_name = t.creator_account
        left join s_con_measure_unit t6 on t6.code=t.unit_base
        left join s_bas_material_barcode t7 on t7.barcode_sid=t.barcode_sid
        left join s_inv_record_customer_repair t8 on t8.customer_repair_sid=t.customer_repair_sid
        LEFT JOIN s_bas_company t9 ON t9.company_sid = t8.company_sid
        LEFT JOIN s_bas_customer t10 ON t10.customer_sid = t8.customer_sid
        LEFT JOIN sys_user t11 ON t11.user_name = t8.updater_account
        LEFT JOIN sys_user t12 ON t12.user_name = t8.confirmer_account
    </sql>

    <select id="selectInvRecordCustomerRepairItemById" parameterType="Long" resultMap="InvRecordCustomerRepairItemResult">
        <include refid="selectInvRecordCustomerRepairItemVo"/>
        where t.customer_repair_item_sid = #{customerRepairItemSid}
    </select>


    <select id="selectInvRecordCustomerRepairItemList" parameterType="com.platform.ems.domain.InvRecordCustomerRepairItem"
            resultMap="InvRecordCustomerRepairItemResult">
        <include refid="selectInvRecordCustomerRepairItemVo"/>
        <where>
                                                                                                    <if test="clientId != null  and clientId != ''">
                               and (<foreach collection="clientId.split(';')" item="item" separator="or"> t.client_id like concat('%',
                                    #{item}, '%')
                                </foreach>)
                            </if>
                                                                                                                                                                                            <if test="customerRepairSid != null ">
                                and t.customer_repair_sid =#{customerRepairSid}
                            </if>
                                                                                                                                                                <if test="materialSid != null ">
                                and t.material_sid =#{materialSid}
                            </if>
                                                                                                                                                                <if test="sku1Sid != null ">
                                and t.sku1_sid =#{sku1Sid}
                            </if>
                                                                                                                                                                <if test="sku2Sid != null ">
                                and t.sku2_sid =#{sku2Sid}
                            </if>
                                                                                                                                                                <if test="barcodeSid != null ">
                                and t.barcode_sid =#{barcodeSid}
                            </if>
                                                                                                                                                                <if test="unitBase != null  and unitBase != ''">
                               and (<foreach collection="unitBase.split(';')" item="item" separator="or"> t.unit_base like concat('%',
                                    #{item}, '%')
                                </foreach>)
                            </if>
                                                                                                                                                                                                <if test="repairQuantity != null ">
                                    and t.repair_quantity = #{repairQuantity}
                                </if>
                                                                                                                                                                                                                            <if test="returnQuantity != null ">
                                    and t.return_quantity = #{returnQuantity}
                                </if>
                                                                                                                                                                                                                            <if test="planReturnDate != null ">
                                    and t.plan_return_date = #{planReturnDate}
                                </if>
                                                                                                                                                                                            <if test="returnStatus != null  and returnStatus != ''">
                               and (<foreach collection="returnStatus.split(';')" item="item" separator="or"> t.return_status like concat('%',
                                    #{item}, '%')
                                </foreach>)
                            </if>
                                                                                                                                                                <if test="itemNum != null ">
                                and t.item_num =#{itemNum}
                            </if>
                                                                                                                                                                                            <if test="creatorAccount != null  and creatorAccount != ''">
                               and (<foreach collection="creatorAccount.split(';')" item="item" separator="or"> t.creator_account like concat('%',
                                    #{item}, '%')
                                </foreach>)
                            </if>
                                                                                                                                                                                                <if test="beginTime != null and beginTime!=''">
                                    and date_format(t.create_date,'%y%m%d') &gt;= date_format(#{beginTime},'%y%m%d')
                                </if>
                                <if test="endTime != null and endTime!=''">
                                    and date_format(t.create_date,'%y%m%d') &lt;= date_format(#{endTime},'%y%m%d')
                                </if>
                                                                                                                                                                                            <if test="updaterAccount != null  and updaterAccount != ''">
                               and (<foreach collection="updaterAccount.split(';')" item="item" separator="or"> t.updater_account like concat('%',
                                    #{item}, '%')
                                </foreach>)
                            </if>
                                                                                                                                                                                                <if test="updateDate != null ">
                                    and t.update_date = #{updateDate}
                                </if>
                                                                                                                                                                                            <if test="dataSourceSys != null  and dataSourceSys != ''">
                               and (<foreach collection="dataSourceSys.split(';')" item="item" separator="or"> t.data_source_sys like concat('%',
                                    #{item}, '%')
                                </foreach>)
                            </if>
                                                                                    <if test="params.dataScope != null and params.dataScope!=''">
                ${params.dataScope}
            </if>
        </where>
    </select>


    <select id="report" parameterType="com.platform.ems.domain.dto.request.InvRecordCustomerRepairRequest"
            resultType="com.platform.ems.domain.dto.response.InvRecordCustomerRepairResponse">
        <include refid="selectReportVo"/>
        <where>
            <if test="customerRepairCode != null and customerRepairCode != '' ">
                and t8.customer_repair_code like concat('%',#{customerRepairCode}, '%')
            </if>
            <if test="returnStatusList != null and returnStatusList.length >0">
                and t.return_status in
                (<foreach collection="returnStatusList" item="item" separator=",">
                #{item}</foreach>)
            </if>
            <if test="materialName != null and materialName != '' ">
                and t1.material_name like concat('%',#{materialName}, '%')
            </if>
            <if test="materialCode != null and materialCode != '' ">
                and t1.material_code like concat('%',#{materialCode}, '%')
            </if>
            <if test="companySidList != null and companySidList.length >0">
                and t8.company_sid in
                (<foreach collection="companySidList" item="item" separator=",">
                #{item}</foreach>)
            </if>
            <if test="handleStatusList != null and handleStatusList.length >0">
                and t8.handle_status in
                (<foreach collection="handleStatusList" item="item" separator=",">
                #{item}</foreach>)
            </if>
            <if test="customerSidList != null and customerSidList.length >0">
                and t8.customer_sid in
                (<foreach collection="customerSidList" item="item" separator=",">
                #{item}</foreach>)
            </if>
            <if test="creatorAccount != null  and creatorAccount != ''">
                and (<foreach collection="creatorAccount.split(';')" item="item" separator="or"> t4.nick_name like concat('%',
                #{item}, '%')
            </foreach>)
            </if>
            <if test="beginTime != null and beginTime!=''">
                and date_format(t.create_date,'%y%m%d') &gt;= date_format(#{beginTime},'%y%m%d')
            </if>
            <if test="endTime != null and endTime!=''">
                and date_format(t.create_date,'%y%m%d') &lt;= date_format(#{endTime},'%y%m%d')
            </if>
            <if test="planReturnDateBegin != null and planReturnDateBegin!=''">
                and date_format(t.plan_return_date,'%y%m%d') &gt;= date_format(#{planReturnDateBegin},'%y%m%d')
            </if>
            <if test="planReturnDateEnd != null and planReturnDateEnd!=''">
                and date_format(t.plan_return_date,'%y%m%d') &lt;= date_format(#{planReturnDateEnd},'%y%m%d')
            </if>
        </where>
        order by t8.customer_repair_code  desc
    </select>

    <!--添加多个-->
    <insert id="inserts">
        insert into s_inv_record_customer_repair_item
        <trim prefix="(" suffix=")" suffixOverrides=",">
                                                client_id,
                                                                customer_repair_item_sid,
                                                                customer_repair_sid,
                                                                material_sid,
                                                                sku1_sid,
                                                                sku2_sid,
                                                                barcode_sid,
                                                                unit_base,
                                                                repair_quantity,
                                                                return_quantity,
                                                                plan_return_date,
                                                                return_status,
                                                                item_num,
                                                                remark,
                                                                creator_account,
                                                                create_date,
                                                                updater_account,
                                                                update_date,
                                                                data_source_sys,
                                    </trim>
        values
            <foreach collection="list" item="item" separator=",">
                <trim prefix=" (" suffix=")" suffixOverrides=",">
                                                            #{item.clientId},
                                                            #{item.customerRepairItemSid},
                                                                                #{item.customerRepairSid},
                                                                                #{item.materialSid},
                                                                                #{item.sku1Sid},
                                                                                #{item.sku2Sid},
                                                                                #{item.barcodeSid},
                                                                                #{item.unitBase},
                                                                                #{item.repairQuantity},
                                                                                #{item.returnQuantity},
                                                                                #{item.planReturnDate},
                                                                                #{item.returnStatus},
                                                                                #{item.itemNum},
                                                                                #{item.remark},
                                                                                #{item.creatorAccount},
                                                                                #{item.createDate},
                                                                                #{item.updaterAccount},
                                                                                #{item.updateDate},
                                                                                #{item.dataSourceSys},
                                                    </trim>
            </foreach>
    </insert>

