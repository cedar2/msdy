                client_id = #{clientId},
                company_sid = #{companySid},
                material_type = #{materialType},
                cost_labor_template_name = #{costLaborTemplateName},
                cost_labor_template_code = #{costLaborTemplateCode},
                product_technique_type = #{productTechniqueType},
                price_enter_mode = #{priceEnterMode},
                cost_org = #{costOrg},
                business_type = #{businessType},
                remark = #{remark},
                status = #{status},
                handle_status = #{handleStatus},
                updater_account = #{updaterAccount},
                update_date = #{updateDate},
                confirmer_date = #{confirmerDate},
                data_source_sys = #{dataSourceSys},
