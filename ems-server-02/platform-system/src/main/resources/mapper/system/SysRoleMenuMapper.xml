<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.system.mapper.SysRoleMenuMapper">

	<resultMap type="com.platform.system.domain.SysRoleMenu" id="SysRoleMenuResult">
		<result property="roleId"     column="role_id"      />
		<result property="menuId"     column="menu_id"      />
		<result property="clientId"     column="client_id"      />
	</resultMap>

	<select id="checkMenuExistRole" resultType="Integer">
	    select count(1) from sys_role_menu where menu_id = #{menuId}
	</select>

	<select id="checkRoleExistMenu" parameterType="com.platform.system.domain.SysRoleMenu" resultType="Integer">
		select count(1) from sys_role_menu t
		left join sys_menu t1 on t.menu_id = t1.menu_id
		<where>
			<if test="roleId != null">
				and t.role_id = #{roleId}
			</if>
			<if test="roleIds != null and roleIds.length >0">
				and t.role_id in (<foreach collection="roleIds" item="roleId" separator=",">#{roleId}</foreach>)
			</if>
			<if test="menuId != null">
				and t.menu_id = #{menuId}
			</if>
			<if test="menuIds != null and menuIds.length >0">
				and t.menu_id in (<foreach collection="menuIds" item="menuId" separator=",">#{menuId}</foreach>)
			</if>
			<if test="perms != null and perms != ''">
				and t1.perms = #{perms}
			</if>
		</where>
	</select>

	<delete id="deleteRoleMenuByRoleId" parameterType="Long">
		delete from sys_role_menu where role_id=#{roleId}
	</delete>

	<delete id="deleteRoleMenu" parameterType="Long">
 		delete from sys_role_menu where role_id in
 		<foreach collection="array" item="roleId" open="(" separator="," close=")">
 			#{roleId}
        </foreach>
 	</delete>

	<insert id="batchRoleMenu">
		insert into sys_role_menu(role_id, menu_id,client_id) values
		<foreach item="item" index="index" collection="list" separator=",">
			(#{item.roleId},#{item.menuId},#{item.clientId})
		</foreach>
	</insert>

</mapper>
